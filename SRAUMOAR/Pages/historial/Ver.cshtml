@page
@model SRAUMOAR.Pages.historial.VerModel
@{
    ViewData["Title"] = "Ver Historial Académico";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="bi bi-eye me-2"></i>
                        Ver Historial Académico
                    </h4>
                    <div class="card-tools">
                        <a href="/historial" class="btn btn-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>
                            Volver
                        </a>
                        <a href="/historial/Registrar?alumnoId=@Model.AlumnoId" class="btn btn-success btn-sm ms-2">
                            <i class="bi bi-plus-circle me-1"></i>
                            Agregar Historial
                        </a>
                    </div>
                </div>
                                    <div class="card-body">
                        <!-- Información del Alumno -->
                        <div class="alert alert-info mb-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5><i class="bi bi-person me-2"></i>Alumno: @Model.NombreAlumno</h5>
                                </div>
                                <div class="col-md-6 text-end">
                                    <div class="row">
                                        <div class="col-6">
                                            <h6 class="text-primary mb-1">
                                                <i class="bi bi-book me-2"></i>Total Materias
                                            </h6>
                                            <span class="badge bg-primary fs-6">@Model.TotalMaterias</span>
                                        </div>
                                        <div class="col-6">
                                            <h6 class="text-success mb-1">
                                                <i class="bi bi-calculator me-2"></i>Total UV
                                            </h6>
                                            <span class="badge bg-success fs-6">@Model.TotalUV</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.CarrerasDisponibles.Any())
                        {
                            <!-- Filtro por Carrera -->
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="bi bi-funnel me-2"></i>
                                        Seleccionar Carrera
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <label for="carreraFiltro" class="form-label">Carrera:</label>
                                            <select id="carreraFiltro" class="form-select">
                                                @foreach (var carrera in Model.CarrerasDisponibles)
                                                {
                                                    if (carrera.CarreraId == Model.CarreraSeleccionadaId)
                                                    {
                                                        <option value="@carrera.CarreraId" selected>
                                                            @carrera.NombreCarrera
                                                        </option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@carrera.CarreraId">
                                                            @carrera.NombreCarrera
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="button" id="btnFiltrar" class="btn btn-primary mt-4">
                                                <i class="bi bi-search me-2"></i>
                                                Cambiar Carrera
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Información sobre registros antiguos -->
                            <div class="alert alert-warning mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Nota:</strong> Este historial fue creado antes de la implementación de carreras. 
                                Los registros existentes no tienen carrera asignada.
                            </div>
                        }

                    @if (Model.HistorialCiclos != null && Model.HistorialCiclos.Any())
                    {
                        <!-- Historial por Ciclos -->
                        @foreach (var ciclo in Model.HistorialCiclos.OrderByDescending(c => c.CicloTexto))
                        {
                            <div class="card mb-3">
                                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">
                                        <i class="bi bi-calendar me-2"></i>
                                        Ciclo @ciclo.CicloTexto | Pensúm @ciclo.Pensum.Anio
                                    </h6>
                                    <a href="/historial/AgregarMateria?historialCicloId=@ciclo.HistorialCicloId" class="btn btn-light btn-sm">
                                        <i class="bi bi-plus-circle me-1"></i>
                                        Agregar Materia
                                    </a>
                                </div>
                                <div class="card-body">
                                    @if (ciclo.MateriasHistorial != null && ciclo.MateriasHistorial.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Materia</th>
                                                        <th>Nota 1</th>
                                                        <th>Nota 2</th>
                                                        <th>Nota 3</th>
                                                        <th>Nota 4</th>
                                                        <th>Nota 5</th>
                                                        <th>Nota 6</th>
                                                        <th>Promedio</th>
                                                        <th>Estado</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var materia in ciclo.MateriasHistorial.OrderBy(m => m.Materia.NombreMateria))
                                                    {
                                                        <tr>
                                                            <td><strong>@materia.Materia.NombreMateria</strong></td>
                                                            <td>@materia.Nota1.ToString("0.00")</td>
                                                            <td>@materia.Nota2.ToString("0.00")</td>
                                                            <td>@materia.Nota3.ToString("0.00")</td>
                                                            <td>@materia.Nota4.ToString("0.00")</td>
                                                            <td>@materia.Nota5.ToString("0.00")</td>
                                                            <td>@materia.Nota6.ToString("0.00")</td>
                                                            <td>
                                                                <span class="badge bg-@(materia.Promedio >= 6 ? "success" : "danger") fs-6">
                                                                    @materia.Promedio.ToString("0.00")
                                                                </span>
                                                            </td>
                                                            <td>
                                                                @if (materia.Aprobada)
                                                                {
                                                                    <span class="badge bg-success">Aprobada</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-danger">Reprobada</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                <button type="button" class="btn btn-danger btn-sm" 
                                                                        onclick="confirmarEliminarMateria(@materia.HistorialMateriaId, '@materia.Materia.NombreMateria')">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning">
                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                            No hay materias registradas para este ciclo.
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- No hay historial -->
                        <div class="alert alert-warning text-center">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>No hay historial académico registrado para este alumno.</strong>
                            <br>
                            <small>Haz clic en "Agregar Historial" para comenzar a registrar.</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación para Eliminar Materia -->
<div class="modal fade" id="modalEliminarMateria" tabindex="-1" aria-labelledby="modalEliminarMateriaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalEliminarMateriaLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar la materia <strong id="nombreMateriaEliminar"></strong>?</p>
                <p class="text-muted mb-0">
                    <small>
                        <i class="bi bi-info-circle me-1"></i>
                        Esta acción no se puede deshacer. Se eliminarán todas las notas asociadas a esta materia.
                    </small>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>
                    Cancelar
                </button>
                <button type="button" class="btn btn-danger" id="btnConfirmarEliminar">
                    <i class="bi bi-trash me-1"></i>
                    Sí, Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let materiaIdAEliminar = null;

        $(document).ready(function() {
            // Evento del botón cambiar carrera
            $('#btnFiltrar').on('click', function() {
                var carreraId = $('#carreraFiltro').val();
                if (carreraId) {
                    // Redirigir a la misma página con la nueva carrera
                    var url = '/historial/Ver?alumnoId=@Model.AlumnoId&carreraId=' + carreraId;
                    window.location.href = url;
                }
            });

            // Evento del select de carrera (cambio automático)
            $('#carreraFiltro').on('change', function() {
                var carreraId = $(this).val();
                if (carreraId) {
                    // Redirigir automáticamente al cambiar la carrera
                    var url = '/historial/Ver?alumnoId=@Model.AlumnoId&carreraId=' + carreraId;
                    window.location.href = url;
                }
            });

            // Evento del botón confirmar eliminación
            $('#btnConfirmarEliminar').on('click', function() {
                if (materiaIdAEliminar) {
                    eliminarMateria(materiaIdAEliminar);
                }
            });
        });

        function confirmarEliminarMateria(materiaId, nombreMateria) {
            materiaIdAEliminar = materiaId;
            $('#nombreMateriaEliminar').text(nombreMateria);
            $('#modalEliminarMateria').modal('show');
        }

        function eliminarMateria(materiaId) {
            // Mostrar indicador de carga
            $('#btnConfirmarEliminar').prop('disabled', true).html('<i class="bi bi-hourglass-split me-1"></i>Eliminando...');
            
            $.ajax({
                url: '/api/historial/eliminarMateria',
                type: 'GET',
                data: { id: materiaId },
                success: function(response) {
                    if (response.success) {
                        // Cerrar modal
                        $('#modalEliminarMateria').modal('hide');
                        
                        // Mostrar mensaje de éxito
                        mostrarMensaje('Materia eliminada exitosamente', 'success');
                        
                        // Recargar la página para mostrar los cambios
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        mostrarMensaje('Error al eliminar la materia: ' + response.message, 'error');
                    }
                },
                error: function(xhr, status, error) {
                    mostrarMensaje('Error al eliminar la materia: ' + error, 'error');
                },
                complete: function() {
                    // Restaurar botón
                    $('#btnConfirmarEliminar').prop('disabled', false).html('<i class="bi bi-trash me-1"></i>Sí, Eliminar');
                }
            });
        }

        function mostrarMensaje(mensaje, tipo) {
            var alertClass = tipo === 'success' ? 'alert-success' : 'alert-danger';
            var icon = tipo === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
            
            var alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="bi ${icon} me-2"></i>
                    ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            
            // Insertar al inicio del card-body
            $('.card-body').first().prepend(alertHtml);
            
            // Auto-ocultar después de 5 segundos
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }
    </script>
}
