@page
@model SRAUMOAR.Pages.historial.AgregarMateriaModel
@{
    ViewData["Title"] = "Agregar Materias al Historial";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="bi bi-plus-circle me-2"></i>
                        Agregar Materias al Historial
                    </h4>
                    <div class="card-tools">
                        <a href="/historial/Ver?alumnoId=@Model.AlumnoId" class="btn btn-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>
                            Volver al Historial
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="HistorialCicloId" />
                        
                        <!-- Información Pre-cargada del Historial -->
                        <div class="alert alert-info mb-4">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6><i class="bi bi-person me-2"></i>Alumno</h6>
                                    <strong>@Model.NombreAlumno</strong>
                                </div>
                                <div class="col-md-3">
                                    <h6><i class="bi bi-calendar me-2"></i>Ciclo</h6>
                                    <strong>@Model.CicloTexto</strong>
                                </div>
                                <div class="col-md-3">
                                    <h6><i class="bi bi-mortarboard me-2"></i>Carrera</h6>
                                    <strong>@Model.NombreCarrera</strong>
                                </div>
                                <div class="col-md-3">
                                    <h6><i class="bi bi-book me-2"></i>Pensúm</h6>
                                    <strong>@Model.NombrePensum</strong>
                                    @if (Model.EsModoManual)
                                    {
                                        <br><small class="text-muted">(Modo Manual)</small>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        @if (Model.EsModoManual)
                        {
                            <div class="alert alert-warning mb-3">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Modo Manual Activado:</strong> Este ciclo fue creado sin pensúm. Debe ingresar los datos de las materias manualmente (código, nombre y unidades valorativas).
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-secondary mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Modo Pensúm Existente:</strong> Este ciclo tiene un pensúm asociado (@Model.NombrePensum). Puede seleccionar materias del pensum o agregar materias manualmente.
                            </div>
                        }

                        <!-- Formulario de Nueva Materia -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-book me-2"></i>
                                    Agregar Nueva Materia
                                </h6>
                            </div>
                            <div class="card-body">
                                @if (!Model.EsModoManual)
                                {
                                    <!-- Selector de modo solo si hay pensum -->
                                    <div class="row mb-3">
                                        <div class="col-12">
                                            <label class="form-label">Tipo de materia:</label>
                                            <div class="btn-group w-100" role="group">
                                                <input type="radio" class="btn-check" name="tipoMateria" id="tipoMateriaPensum" value="pensum" checked>
                                                <label class="btn btn-outline-primary" for="tipoMateriaPensum">
                                                    <i class="bi bi-list-ul me-2"></i>Materia del Pensúm
                                                </label>
                                                
                                                <input type="radio" class="btn-check" name="tipoMateria" id="tipoMateriaManual" value="manual">
                                                <label class="btn btn-outline-primary" for="tipoMateriaManual">
                                                    <i class="bi bi-pencil me-2"></i>Materia Manual
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                }
                                
                                <!-- Formulario para materia del pensum (solo si no es modo manual) -->
                                <div id="formularioMateriaPensum" style="display: @(Model.EsModoManual ? "none" : "block");">
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="materiaSelect" class="form-label">Materia:</label>
                                            <select id="materiaSelect" class="form-select">
                                                <option value="">-- Seleccione una materia --</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="promedio" class="form-label">Promedio:</label>
                                            <input type="number" id="promedio" class="form-control" step="0.01" min="0" max="10" />
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Formulario para materia manual (siempre disponible) -->
                                <div id="formularioMateriaManual" style="display: @(Model.EsModoManual ? "block" : "none");">
                                    <div class="alert alert-info mb-3">
                                        <i class="bi bi-info-circle me-2"></i>
                                        <strong>Materia manual:</strong> Ingrese los datos de la materia manualmente (código, nombre y unidades valorativas).
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            <label class="form-label" for="materiaCodigoLibre">Código materia: <span class="text-danger">*</span></label>
                                            <input type="text" id="materiaCodigoLibre" class="form-control" placeholder="Ej: MAT101" />
                                        </div>
                                        <div class="col-md-5">
                                            <label class="form-label" for="materiaNombreLibre">Nombre materia: <span class="text-danger">*</span></label>
                                            <input type="text" id="materiaNombreLibre" class="form-control" placeholder="Ej: Matemática I" />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label" for="materiaUvLibre">U.V.: <span class="text-danger">*</span></label>
                                            <input type="number" id="materiaUvLibre" class="form-control" min="1" step="1" placeholder="Ej: 4" />
                                        </div>
                                        <div class="col-md-2">
                                            <label for="promedioManual" class="form-label">Promedio:</label>
                                            <input type="number" id="promedioManual" class="form-control" step="0.01" min="0" max="10" placeholder="0.00" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-2">
                                        <label for="nota1" class="form-label">Nota 1:</label>
                                        <input type="number" id="nota1" class="form-control" step="0.01" min="0" max="10" />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota2" class="form-label">Nota 2:</label>
                                        <input type="number" id="nota2" class="form-control" step="0.01" min="0" max="10" />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota3" class="form-label">Nota 3:</label>
                                        <input type="number" id="nota3" class="form-control" step="0.01" min="0" max="10" />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota4" class="form-label">Nota 4:</label>
                                        <input type="number" id="nota4" class="form-control" step="0.01" min="0" max="10" />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota5" class="form-label">Nota 5:</label>
                                        <input type="number" id="nota5" class="form-control" step="0.01" min="0" max="10" />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota6" class="form-label">Nota 6:</label>
                                        <input type="number" id="nota6" class="form-control" step="0.01" min="0" max="10" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="aprobada" checked>
                                            <label class="form-check-label" for="aprobada">
                                                Materia Aprobada
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="equivalencia">
                                            <label class="form-check-label" for="equivalencia">
                                                Equivalencia
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="examenSuficiencia">
                                            <label class="form-check-label" for="examenSuficiencia">
                                                Examen de Suficiencia
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <button type="button" class="btn btn-primary" id="btnAgregarMateria">
                                            <i class="bi bi-plus-circle me-2"></i>
                                            Agregar Materia
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Lista de Materias Agregadas -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-list-ul me-2"></i>
                                    Materias a Agregar
                                </h6>
                            </div>
                            <div class="card-body">
                                <div id="materiasList">
                                    <p class="text-muted">No hay materias agregadas aún.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg" id="btnGuardar" disabled>
                                <i class="bi bi-save me-2"></i>
                                Agregar Materias al Historial
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let materiasAgregadas = [];
        let materiasDisponibles = [];
        const esModoManual = @Model.EsModoManual.ToString().ToLower();

        // Variable para controlar el modo actual (pensum o manual)
        let usarModoManual = esModoManual;

        jQuery(document).ready(function() {
            console.log('=== DEBUG AgregarMateria ===');
            console.log('EsModoManual:', esModoManual);
            console.log('PensumId:', @Model.PensumId);
            console.log('HistorialCicloId:', @Model.HistorialCicloId);
            
            // Si no es modo manual forzado, permitir cambiar entre pensum y manual
            if (!esModoManual) {
                // Cargar materias del pensum al cargar la página
                console.log('Modo pensum existente - cargando materias...');
                cargarMaterias(@Model.PensumId);
                
                // Manejar cambio entre pensum y manual
                jQuery('input[name="tipoMateria"]').change(function() {
                    var tipoSeleccionado = jQuery('input[name="tipoMateria"]:checked').val();
                    if (tipoSeleccionado === 'pensum') {
                        usarModoManual = false;
                        jQuery('#formularioMateriaPensum').show();
                        jQuery('#formularioMateriaManual').hide();
                        // Deshabilitar campos manuales para que no se validen
                        jQuery('#materiaCodigoLibre, #materiaNombreLibre, #materiaUvLibre, #promedioManual').prop('disabled', true);
                        // Habilitar campos del pensum
                        jQuery('#materiaSelect, #promedio').prop('disabled', false);
                    } else {
                        usarModoManual = true;
                        jQuery('#formularioMateriaPensum').hide();
                        jQuery('#formularioMateriaManual').show();
                        // Habilitar campos manuales
                        jQuery('#materiaCodigoLibre, #materiaNombreLibre, #materiaUvLibre, #promedioManual').prop('disabled', false);
                        // Deshabilitar campos del pensum para que no se validen
                        jQuery('#materiaSelect, #promedio').prop('disabled', true);
                    }
                });
                
                // Inicializar estado: deshabilitar campos manuales si está en modo pensum
                if (jQuery('input[name="tipoMateria"]:checked').val() === 'pensum') {
                    jQuery('#materiaCodigoLibre, #materiaNombreLibre, #materiaUvLibre, #promedioManual').prop('disabled', true);
                }
            } else {
                // Modo manual forzado - solo mostrar campos manuales
                usarModoManual = true;
                console.log('Modo manual activado - campos libres disponibles');
                // Deshabilitar campos del pensum si existen (aunque no deberían estar visibles)
                jQuery('#materiaSelect, #promedio').prop('disabled', true);
            }

            // Agregar materia
            jQuery('#btnAgregarMateria').click(function() {
                agregarMateria();
            });
        });

        function cargarMaterias(pensumId) {
            jQuery.get(`/api/materias?pensumId=${pensumId}`, function(data) {
                materiasDisponibles = data;
                var select = jQuery('#materiaSelect');
                select.empty();
                select.append('<option value="">-- Seleccione una materia --</option>');
                
                materiasDisponibles.forEach(function(materia) {
                    select.append(`<option value="${materia.materiaId}">${materia.nombreMateria}</option>`);
                });
            });
        }

        function agregarMateria() {
            // Obtener el promedio según el modo activo
            var promedio = usarModoManual 
                ? parseFloat(jQuery('#promedioManual').val()) || 0
                : parseFloat(jQuery('#promedio').val()) || 0;
            
            var materia = {
                nota1: parseFloat(jQuery('#nota1').val()) || 0,
                nota2: parseFloat(jQuery('#nota2').val()) || 0,
                nota3: parseFloat(jQuery('#nota3').val()) || 0,
                nota4: parseFloat(jQuery('#nota4').val()) || 0,
                nota5: parseFloat(jQuery('#nota5').val()) || 0,
                nota6: parseFloat(jQuery('#nota6').val()) || 0,
                promedio: promedio,
                aprobada: jQuery('#aprobada').is(':checked'),
                equivalencia: jQuery('#equivalencia').is(':checked'),
                examenSuficiencia: jQuery('#examenSuficiencia').is(':checked')
            };

            if (usarModoManual) {
                materia.materiaCodigoLibre = jQuery('#materiaCodigoLibre').val().trim();
                materia.materiaNombreLibre = jQuery('#materiaNombreLibre').val().trim();
                materia.materiaUvLibre = parseInt(jQuery('#materiaUvLibre').val(), 10) || 0;

                if (!materia.materiaCodigoLibre || !materia.materiaNombreLibre || materia.materiaUvLibre <= 0) {
                    alert('Debe ingresar código, nombre y U.V. válidos para la materia.');
                    return;
                }

                materia.nombreMostrar = materia.materiaCodigoLibre + ' - ' + materia.materiaNombreLibre + ' (' + materia.materiaUvLibre + ' UV)';
            } else {
                var materiaId = jQuery('#materiaSelect').val();
                var materiaText = jQuery('#materiaSelect option:selected').text();

                if (!materiaId) {
                    alert('Por favor seleccione una materia');
                    return;
                }

                materia.materiaId = materiaId;
                materia.nombreMostrar = materiaText;
            }

            if (materia.promedio <= 0) {
                alert('Debe ingresar un promedio válido');
                return;
            }

            materiasAgregadas.push(materia);
            actualizarListaMaterias();
            limpiarFormularioMateria();
            habilitarBotonGuardar();
        }

        function actualizarListaMaterias() {
            var container = jQuery('#materiasList');
            if (materiasAgregadas.length === 0) {
                container.html('<p class="text-muted">No hay materias agregadas aún.</p>');
                return;
            }

            var html = '';
            materiasAgregadas.forEach(function(materia, index) {
                html += `
                    <div class="alert alert-success d-flex justify-content-between align-items-center">
                        <div>
                            <strong>${materia.nombreMostrar}</strong><br>
                            <small>Promedio: ${materia.promedio} | Aprobada: ${materia.aprobada ? 'Sí' : 'No'} | Equivalencia: ${materia.equivalencia ? 'Sí' : 'No'} | Examen de Suficiencia: ${materia.examenSuficiencia ? 'Sí' : 'No'}</small>
                        </div>
                        <button type="button" class="btn btn-danger btn-sm" onclick="eliminarMateria(${index})">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                `;
            });
            
            container.html(html);
        }

        function eliminarMateria(index) {
            materiasAgregadas.splice(index, 1);
            actualizarListaMaterias();
            habilitarBotonGuardar();
        }

        function limpiarFormularioMateria() {
            if (usarModoManual) {
                jQuery('#materiaCodigoLibre').val('');
                jQuery('#materiaNombreLibre').val('');
                jQuery('#materiaUvLibre').val('');
                jQuery('#promedioManual').val('');
            } else {
                jQuery('#materiaSelect').val('');
                jQuery('#promedio').val('');
            }
            jQuery('input[id^="nota"]').val('');
            jQuery('#aprobada').prop('checked', true);
            jQuery('#equivalencia').prop('checked', false);
            jQuery('#examenSuficiencia').prop('checked', false);
        }

        function habilitarBotonGuardar() {
            jQuery('#btnGuardar').prop('disabled', materiasAgregadas.length === 0);
        }

        // Enviar formulario
        jQuery('form').submit(function(e) {
            if (materiasAgregadas.length === 0) {
                e.preventDefault();
                alert('Debe agregar al menos una materia antes de guardar');
                return false;
            }
            
            // Validar que todas las materias tengan notas válidas
            for (let i = 0; i < materiasAgregadas.length; i++) {
                var materia = materiasAgregadas[i];
                if (materia.promedio <= 0) {
                    e.preventDefault();
                    alert(`La materia "${materia.nombreMostrar}" debe tener al menos una nota válida`);
                    return false;
                }
            }

            // Agregar las materias al formulario antes de enviar
            materiasAgregadas.forEach(function(materia, index) {
                // Determinar si la materia es manual (tiene campos libres) o del pensum
                var esMateriaManual = materia.materiaCodigoLibre || materia.materiaNombreLibre || materia.materiaUvLibre;
                
                if (!esMateriaManual) {
                    jQuery('<input>').attr({
                        type: 'hidden',
                        name: `Materias[${index}].MateriaId`,
                        value: materia.materiaId
                    }).appendTo('form');
                } else {
                    jQuery('<input>').attr({
                        type: 'hidden',
                        name: `Materias[${index}].MateriaCodigoLibre`,
                        value: materia.materiaCodigoLibre
                    }).appendTo('form');

                    jQuery('<input>').attr({
                        type: 'hidden',
                        name: `Materias[${index}].MateriaNombreLibre`,
                        value: materia.materiaNombreLibre
                    }).appendTo('form');

                    jQuery('<input>').attr({
                        type: 'hidden',
                        name: `Materias[${index}].MateriaUnidadesValorativasLibre`,
                        value: materia.materiaUvLibre
                    }).appendTo('form');
                }
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota1`,
                    value: materia.nota1
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota2`,
                    value: materia.nota2
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota3`,
                    value: materia.nota3
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota4`,
                    value: materia.nota4
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota5`,
                    value: materia.nota5
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota6`,
                    value: materia.nota6
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Promedio`,
                    value: materia.promedio
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Aprobada`,
                    value: materia.aprobada
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Equivalencia`,
                    value: materia.equivalencia
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].ExamenSuficiencia`,
                    value: materia.examenSuficiencia
                }).appendTo('form');
            });
        });
    </script>
}

}
