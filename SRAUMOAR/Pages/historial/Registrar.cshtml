@page
@model SRAUMOAR.Pages.historial.RegistrarModel
@{
    ViewData["Title"] = "Registrar Historial Académico";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="bi bi-plus-circle me-2"></i>
                        Registrar Historial Académico
                    </h4>
                    <div class="card-tools">
                        <a href="/historial" class="btn btn-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>
                            Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="AlumnoId" />
                        
                        <!-- Información del Alumno -->
                        <div class="alert alert-info">
                            <h5><i class="bi bi-person me-2"></i>Alumno: @Model.NombreAlumno</h5>
                        </div>

                        <!-- Formulario de Nuevo Ciclo -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-calendar-plus me-2"></i>
                                    Agregar Nuevo Ciclo
                                </h6>
                            </div>
                            <div class="card-body">
                                <!-- Selección de modo -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Modo de registro:</label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" asp-for="UsarPensumExistente" value="true" id="modoPensumExistente" checked />
                                            <label class="form-check-label" for="modoPensumExistente">
                                                Usar pensúm existente
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" asp-for="UsarPensumExistente" value="false" id="modoPensumManual" />
                                            <label class="form-check-label" for="modoPensumManual">
                                                Ingresar pensúm manualmente
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6" id="grupoPensumLibre" style="display:none;">
                                        <label asp-for="PensumNombreLibre" class="form-label"></label>
                                        <input asp-for="PensumNombreLibre" class="form-control" />
                                        <span asp-validation-for="PensumNombreLibre" class="text-danger"></span>
                                        <small class="form-text text-muted">
                                            En este modo no se cargarán materias desde el pensúm, se agregarán manualmente después.
                                        </small>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3">
                                        <label asp-for="CicloTexto" class="form-label">Ciclo:</label>
                                        <input asp-for="CicloTexto" class="form-control" placeholder="Ej: 01-2020" required />
                                        <span asp-validation-for="CicloTexto" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="carreraSelect" class="form-label">Carrera:</label>
                                        <select id="carreraSelect" asp-items="@Model.CarrerasList" class="form-select" required>
                                            <option value="">-- Seleccione una carrera --</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3" id="grupoPensumExistente">
                                        <label asp-for="PensumId" class="form-label">Pensúm:</label>
                                        <select asp-for="PensumId" asp-items="@Model.PensumsList" class="form-select" disabled>
                                            <option value="">-- Seleccione un pensúm --</option>
                                        </select>
                                        <span asp-validation-for="PensumId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label asp-for="CarreraId" class="form-label">Carrera del Historial:</label>
                                        @if (Model.CarrerasList.Any())
                                        {
                                            <select asp-for="CarreraId" asp-items="@Model.CarrerasList" class="form-select" required>
                                                <option value="">-- Seleccione carrera para el historial --</option>
                                            </select>
                                            <span asp-validation-for="CarreraId" class="text-danger"></span>
                                        }
                                        else
                                        {
                                            <div class="alert alert-info">
                                                <i class="bi bi-info-circle me-2"></i>
                                                <strong>Primer registro:</strong> Este alumno no tiene historial previo. 
                                                Se creará automáticamente un nuevo historial.
                                            </div>
                                            <input type="hidden" asp-for="CarreraId" value="" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Formulario de Nueva Materia -->
                        <div class="card mb-3" id="grupoMaterias">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-book me-2"></i>
                                    Agregar Nueva Materia
                                </h6>
                            </div>
                            <div class="card-body">
                                <!-- Formulario para materia del pensum -->
                                <div id="formularioMateriaPensum">
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="materiaSelect" class="form-label">Materia:</label>
                                            <select id="materiaSelect" class="form-select">
                                                <option value="">-- Seleccione una materia --</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="promedio" class="form-label">Promedio:</label>
                                            <input type="number" id="promedio" class="form-control" min="0" max="10" step="0.01" >
                                            <small class="form-text text-muted">Ingrese el promedio calculado (cada nota tiene peso diferente)</small>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Formulario para materia manual -->
                                <div id="formularioMateriaManual" style="display:none;">
                                    <div class="alert alert-info mb-3">
                                        <i class="bi bi-info-circle me-2"></i>
                                        <strong>Materia manual:</strong> Ingrese los datos de la materia manualmente (código, nombre y unidades valorativas).
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            <label class="form-label" for="materiaCodigoLibre">Código materia: <span class="text-danger">*</span></label>
                                            <input type="text" id="materiaCodigoLibre" class="form-control" placeholder="Ej: MAT101" />
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label" for="materiaNombreLibre">Nombre materia: <span class="text-danger">*</span></label>
                                            <input type="text" id="materiaNombreLibre" class="form-control" placeholder="Ej: Matemática I" />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label" for="materiaUvLibre">U.V.: <span class="text-danger">*</span></label>
                                            <input type="number" id="materiaUvLibre" class="form-control" min="1" step="1" placeholder="Ej: 4" />
                                        </div>
                                        <div class="col-md-3">
                                            <label for="promedioManual" class="form-label">Promedio:</label>
                                            <input type="number" id="promedioManual" class="form-control" min="0" max="10" step="0.01" placeholder="0.00" />
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-2">
                                        <label for="nota1" class="form-label">Nota 1:</label>
                                        <input type="number" id="nota1" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota2" class="form-label">Nota 2:</label>
                                        <input type="number" id="nota2" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota3" class="form-label">Nota 3:</label>
                                        <input type="number" id="nota3" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota4" class="form-label">Nota 4:</label>
                                        <input type="number" id="nota4" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota5" class="form-label">Nota 5:</label>
                                        <input type="number" id="nota5" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota6" class="form-label">Nota 6:</label>
                                        <input type="number" id="nota6" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <div class="form-check mt-4">
                                            <input class="form-check-input" type="checkbox" id="aprobada" checked>
                                            <label class="form-check-label" for="aprobada">
                                                Aprobada
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check mt-4">
                                            <input class="form-check-input" type="checkbox" id="equivalencia">
                                            <label class="form-check-label" for="equivalencia">
                                                Equivalencia
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check mt-4">
                                            <input class="form-check-input" type="checkbox" id="examenSuficiencia">
                                            <label class="form-check-label" for="examenSuficiencia">
                                                Examen de Suficiencia
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <button type="button" id="btnAgregarMateria" class="btn btn-primary mt-4">
                                            <i class="bi bi-plus-circle me-2"></i>
                                            Agregar Materia
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Lista de Materias Agregadas -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-list-ul me-2"></i>
                                    Materias Agregadas
                                </h6>
                            </div>
                            <div class="card-body">
                                <div id="materiasList">
                                    <p class="text-muted">No hay materias agregadas aún.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg" id="btnGuardar" disabled>
                                <i class="bi bi-save me-2"></i>
                                Guardar Historial
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let materiasAgregadas = [];
        let materiasDisponibles = [];

        jQuery(document).ready(function() {
            // Inicializar modo
            toggleModoPensum();
            
            // Habilitar botón si ya está en modo manual al cargar
            var usarPensumInicial = jQuery('input[name="UsarPensumExistente"]:checked').val() === 'true';
            if (!usarPensumInicial) {
                jQuery('#btnGuardar').prop('disabled', false);
            }

            // Cambio de modo
            jQuery('input[name="UsarPensumExistente"]').change(function() {
                toggleModoPensum();
            });

            // Habilitar carreras cuando se ingrese el ciclo
            jQuery('#CicloTexto').on('input', function() {
                var cicloTexto = jQuery(this).val().trim();
                if (cicloTexto.length > 0) {
                    jQuery('#carreraSelect').prop('disabled', false);
                } else {
                    jQuery('#carreraSelect').prop('disabled', true);
                    if (jQuery('input[name="UsarPensumExistente"]:checked').val() === 'true') {
                        jQuery('#PensumId').prop('disabled', true);
                    }
                    jQuery('#carreraSelect').val('');
                    jQuery('#PensumId').val('');
                }
            });

            // Cargar pensúms cuando se seleccione carrera
            jQuery('#carreraSelect').change(function() {
                var carreraId = jQuery(this).val();
                var usarPensum = jQuery('input[name="UsarPensumExistente"]:checked').val() === 'true';
                if (carreraId && usarPensum) {
                    cargarPensums(carreraId);
                    jQuery('#PensumId').prop('disabled', false);
                } else if (!usarPensum) {
                    jQuery('#PensumId').prop('disabled', true);
                    jQuery('#PensumId').val('');
                } else {
                    jQuery('#PensumId').prop('disabled', true);
                    jQuery('#PensumId').val('');
                }
            });

            // Cargar materias cuando se seleccione pensúm
            jQuery('#PensumId').change(function() {
                var pensumId = jQuery(this).val();
                if (pensumId) {
                    cargarMaterias(pensumId);
                }
            });

            // Agregar materia
            jQuery('#btnAgregarMateria').click(function() {
                agregarMateria();
            });

            // El promedio se ingresa manualmente (no se calcula automáticamente)
            // porque cada nota tiene un peso diferente
        });

        function toggleModoPensum() {
            var usarPensum = jQuery('input[name="UsarPensumExistente"]:checked').val() === 'true';

            if (usarPensum) {
                jQuery('#grupoPensumLibre').hide();
                jQuery('#grupoPensumExistente').show();
                jQuery('#formularioMateriaPensum').show();
                jQuery('#formularioMateriaManual').hide();
                // Deshabilitar campos manuales para que no se validen
                jQuery('#materiaCodigoLibre, #materiaNombreLibre, #materiaUvLibre, #promedioManual').prop('disabled', true);
                // Habilitar campos del pensum
                jQuery('#materiaSelect, #promedio').prop('disabled', false);
                jQuery('#carreraSelect').prop('disabled', false);
                var carreraId = jQuery('#carreraSelect').val();
                if (carreraId) {
                    jQuery('#PensumId').prop('disabled', false);
                    cargarPensums(carreraId);
                }
            } else {
                jQuery('#grupoPensumLibre').show();
                jQuery('#grupoPensumExistente').hide();
                jQuery('#formularioMateriaPensum').hide();
                jQuery('#formularioMateriaManual').show();
                // Habilitar campos manuales
                jQuery('#materiaCodigoLibre, #materiaNombreLibre, #materiaUvLibre, #promedioManual').prop('disabled', false);
                // Deshabilitar campos del pensum para que no se validen
                jQuery('#materiaSelect, #promedio').prop('disabled', true);
                jQuery('#carreraSelect').prop('disabled', false);
                jQuery('#PensumId').prop('disabled', true).val('');
                materiasAgregadas = [];
                actualizarListaMaterias();
                // En modo manual, habilitar el botón de guardar inmediatamente
                jQuery('#btnGuardar').prop('disabled', false);
            }
        }

        // Las carreras ya están cargadas en el modelo, no necesitamos cargarlas por AJAX

        function cargarPensums(carreraId) {
            jQuery.get(`/api/pensums?carreraId=${carreraId}`, function(data) {
                var select = jQuery('#PensumId');
                select.empty();
                select.append('<option value="">-- Seleccione un pensúm --</option>');
                
                data.forEach(function(pensum) {
                    select.append(`<option value="${pensum.pensumId}">Pensúm ${pensum.anio}</option>`);
                });
            });
        }

        function cargarMaterias(pensumId) {
            jQuery.get(`/api/materias?pensumId=${pensumId}`, function(data) {
                materiasDisponibles = data;
                var select = jQuery('#materiaSelect');
                select.empty();
                select.append('<option value="">-- Seleccione una materia --</option>');
                
                materiasDisponibles.forEach(function(materia) {
                    select.append(`<option value="${materia.materiaId}">${materia.nombreMateria}</option>`);
                });
            });
        }



        function agregarMateria() {
            var usarPensum = jQuery('input[name="UsarPensumExistente"]:checked').val() === 'true';
            
            // Obtener el promedio según el modo activo
            var promedio = usarPensum 
                ? parseFloat(jQuery('#promedio').val()) || 0
                : parseFloat(jQuery('#promedioManual').val()) || 0;
            
            var materia = {
                nota1: parseFloat(jQuery('#nota1').val()) || 0,
                nota2: parseFloat(jQuery('#nota2').val()) || 0,
                nota3: parseFloat(jQuery('#nota3').val()) || 0,
                nota4: parseFloat(jQuery('#nota4').val()) || 0,
                nota5: parseFloat(jQuery('#nota5').val()) || 0,
                nota6: parseFloat(jQuery('#nota6').val()) || 0,
                promedio: promedio,
                aprobada: jQuery('#aprobada').is(':checked'),
                equivalencia: jQuery('#equivalencia').is(':checked'),
                examenSuficiencia: jQuery('#examenSuficiencia').is(':checked')
            };

            if (usarPensum) {
                // Modo pensum: validar selección de materia
                var materiaId = jQuery('#materiaSelect').val();
                var materiaText = jQuery('#materiaSelect option:selected').text();
                
                if (!materiaId) {
                    alert('Por favor seleccione una materia');
                    return;
                }

                materia.materiaId = materiaId;
                materia.nombreMateria = materiaText;
            } else {
                // Modo manual: validar campos libres
                materia.materiaCodigoLibre = jQuery('#materiaCodigoLibre').val().trim();
                materia.materiaNombreLibre = jQuery('#materiaNombreLibre').val().trim();
                materia.materiaUvLibre = parseInt(jQuery('#materiaUvLibre').val(), 10) || 0;

                if (!materia.materiaCodigoLibre || !materia.materiaNombreLibre || materia.materiaUvLibre <= 0) {
                    alert('Debe ingresar código, nombre y U.V. válidos para la materia.');
                    return;
                }

                materia.nombreMateria = materia.materiaCodigoLibre + ' - ' + materia.materiaNombreLibre + ' (' + materia.materiaUvLibre + ' UV)';
            }

            if (materia.promedio <= 0) {
                alert('Debe ingresar un promedio válido');
                return;
            }

            materiasAgregadas.push(materia);
            actualizarListaMaterias();
            limpiarFormularioMateria();
            habilitarBotonGuardar();
        }

        function actualizarListaMaterias() {
            var container = jQuery('#materiasList');
            if (materiasAgregadas.length === 0) {
                container.html('<p class="text-muted">No hay materias agregadas aún.</p>');
                return;
            }

            var html = '';
            materiasAgregadas.forEach(function(materia, index) {
                html += `
                    <div class="alert alert-success d-flex justify-content-between align-items-center">
                        <div>
                            <strong>${materia.nombreMateria}</strong><br>
                            <small>Promedio: ${materia.promedio} | Aprobada: ${materia.aprobada ? 'Sí' : 'No'} | Equivalencia: ${materia.equivalencia ? 'Sí' : 'No'} | Examen de Suficiencia: ${materia.examenSuficiencia ? 'Sí' : 'No'}</small>
                        </div>
                        <button type="button" class="btn btn-danger btn-sm" onclick="eliminarMateria(${index})">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                `;
            });
            
            container.html(html);
        }

        function eliminarMateria(index) {
            materiasAgregadas.splice(index, 1);
            actualizarListaMaterias();
            habilitarBotonGuardar();
        }

        function limpiarFormularioMateria() {
            var usarPensum = jQuery('input[name="UsarPensumExistente"]:checked').val() === 'true';
            
            if (usarPensum) {
                jQuery('#materiaSelect').val('');
                jQuery('#promedio').val('');
            } else {
                jQuery('#materiaCodigoLibre').val('');
                jQuery('#materiaNombreLibre').val('');
                jQuery('#materiaUvLibre').val('');
                jQuery('#promedioManual').val('');
            }
            
            jQuery('input[id^="nota"]').val('');
            jQuery('#aprobada').prop('checked', true);
            jQuery('#equivalencia').prop('checked', false);
            jQuery('#examenSuficiencia').prop('checked', false);
        }

        function habilitarBotonGuardar() {
            var usarPensum = jQuery('input[name="UsarPensumExistente"]:checked').val() === 'true';
            // En modo manual, permitir guardar sin materias
            if (!usarPensum) {
                jQuery('#btnGuardar').prop('disabled', false);
            } else {
                // En modo pensum existente, requerir al menos una materia
                jQuery('#btnGuardar').prop('disabled', materiasAgregadas.length === 0);
            }
        }

        // Enviar formulario
        jQuery('form').submit(function(e) {
            var usarPensum = jQuery('input[name="UsarPensumExistente"]:checked').val() === 'true';

            if (usarPensum && materiasAgregadas.length === 0) {
                e.preventDefault();
                alert('Debe agregar al menos una materia antes de guardar');
                return false;
            }
            
            // Validar que todas las materias tengan notas válidas (solo en modo pensum existente)
            if (usarPensum) {
                for (let i = 0; i < materiasAgregadas.length; i++) {
                    var materia = materiasAgregadas[i];
                    if (materia.promedio <= 0) {
                        e.preventDefault();
                        alert(`La materia "${materia.nombreMateria}" debe tener al menos una nota válida`);
                        return false;
                    }
                }
            }

            // Agregar las materias al formulario antes de enviar
            materiasAgregadas.forEach(function(materia, index) {
                // Determinar si la materia es manual (tiene campos libres) o del pensum
                var esMateriaManual = materia.materiaCodigoLibre || materia.materiaNombreLibre || materia.materiaUvLibre;
                
                if (!esMateriaManual) {
                    // Materia del pensum
                    jQuery('<input>').attr({
                        type: 'hidden',
                        name: `Materias[${index}].MateriaId`,
                        value: materia.materiaId
                    }).appendTo('form');
                } else {
                    // Materia manual
                    jQuery('<input>').attr({
                        type: 'hidden',
                        name: `Materias[${index}].MateriaCodigoLibre`,
                        value: materia.materiaCodigoLibre
                    }).appendTo('form');

                    jQuery('<input>').attr({
                        type: 'hidden',
                        name: `Materias[${index}].MateriaNombreLibre`,
                        value: materia.materiaNombreLibre
                    }).appendTo('form');

                    jQuery('<input>').attr({
                        type: 'hidden',
                        name: `Materias[${index}].MateriaUnidadesValorativasLibre`,
                        value: materia.materiaUvLibre
                    }).appendTo('form');
                }
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota1`,
                    value: materia.nota1
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota2`,
                    value: materia.nota2
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota3`,
                    value: materia.nota3
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota4`,
                    value: materia.nota4
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota5`,
                    value: materia.nota5
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota6`,
                    value: materia.nota6
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Promedio`,
                    value: materia.promedio
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Aprobada`,
                    value: materia.aprobada
                }).appendTo('form');
                
                jQuery('<input>').attr({
                    type: 'hidden',
