@page
@model SRAUMOAR.Pages.historial.RegistrarModel
@{
    ViewData["Title"] = "Registrar Historial Académico";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="bi bi-plus-circle me-2"></i>
                        Registrar Historial Académico
                    </h4>
                    <div class="card-tools">
                        <a href="/historial" class="btn btn-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>
                            Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="AlumnoId" />
                        
                        <!-- Información del Alumno -->
                        <div class="alert alert-info">
                            <h5><i class="bi bi-person me-2"></i>Alumno: @Model.NombreAlumno</h5>
                        </div>

                        <!-- Formulario de Nuevo Ciclo -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-calendar-plus me-2"></i>
                                    Agregar Nuevo Ciclo
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label asp-for="CicloTexto" class="form-label">Ciclo:</label>
                                        <input asp-for="CicloTexto" class="form-control" placeholder="Ej: 01-2020" required />
                                        <span asp-validation-for="CicloTexto" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="carreraSelect" class="form-label">Carrera:</label>
                                        <select id="carreraSelect" asp-items="@Model.CarrerasList" class="form-select" required>
                                            <option value="">-- Seleccione una carrera --</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label asp-for="PensumId" class="form-label">Pensúm:</label>
                                        <select asp-for="PensumId" asp-items="@Model.PensumsList" class="form-select" required disabled>
                                            <option value="">-- Seleccione un pensúm --</option>
                                        </select>
                                        <span asp-validation-for="PensumId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label asp-for="CarreraId" class="form-label">Carrera del Historial:</label>
                                        @if (Model.CarrerasList.Any())
                                        {
                                            <select asp-for="CarreraId" asp-items="@Model.CarrerasList" class="form-select" required>
                                                <option value="">-- Seleccione carrera para el historial --</option>
                                            </select>
                                            <span asp-validation-for="CarreraId" class="text-danger"></span>
                                        }
                                        else
                                        {
                                            <div class="alert alert-info">
                                                <i class="bi bi-info-circle me-2"></i>
                                                <strong>Primer registro:</strong> Este alumno no tiene historial previo. 
                                                Se creará automáticamente un nuevo historial.
                                            </div>
                                            <input type="hidden" asp-for="CarreraId" value="" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Formulario de Nueva Materia -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-book me-2"></i>
                                    Agregar Nueva Materia
                                </h6>
                            </div>
                            <div class="card-body">
                                                                 <div class="row mb-3">
                                     <div class="col-md-6">
                                         <label for="materiaSelect" class="form-label">Materia:</label>
                                         <select id="materiaSelect" class="form-select">
                                             <option value="">-- Seleccione una materia --</option>
                                         </select>
                                     </div>
                                     <div class="col-md-6">
                                         <label for="promedio" class="form-label">Promedio:</label>
                                         <input type="number" id="promedio" class="form-control" min="0" max="10" step="0.01" >
                                         <small class="form-text text-muted">Ingrese el promedio calculado (cada nota tiene peso diferente)</small>
                                     </div>
                                 </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-2">
                                        <label for="nota1" class="form-label">Nota 1:</label>
                                        <input type="number" id="nota1" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota2" class="form-label">Nota 2:</label>
                                        <input type="number" id="nota2" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota3" class="form-label">Nota 3:</label>
                                        <input type="number" id="nota3" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota4" class="form-label">Nota 4:</label>
                                        <input type="number" id="nota4" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota5" class="form-label">Nota 5:</label>
                                        <input type="number" id="nota5" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                    <div class="col-md-2">
                                        <label for="nota6" class="form-label">Nota 6:</label>
                                        <input type="number" id="nota6" class="form-control" min="0" max="10" step="0.01" >
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <div class="form-check mt-4">
                                            <input class="form-check-input" type="checkbox" id="aprobada" checked>
                                            <label class="form-check-label" for="aprobada">
                                                Aprobada
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check mt-4">
                                            <input class="form-check-input" type="checkbox" id="equivalencia">
                                            <label class="form-check-label" for="equivalencia">
                                                Equivalencia
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <button type="button" id="btnAgregarMateria" class="btn btn-primary mt-4">
                                            <i class="bi bi-plus-circle me-2"></i>
                                            Agregar Materia
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Lista de Materias Agregadas -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-list-ul me-2"></i>
                                    Materias Agregadas
                                </h6>
                            </div>
                            <div class="card-body">
                                <div id="materiasList">
                                    <p class="text-muted">No hay materias agregadas aún.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg" id="btnGuardar" disabled>
                                <i class="bi bi-save me-2"></i>
                                Guardar Historial
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let materiasAgregadas = [];
        let materiasDisponibles = [];

        $(document).ready(function() {
            // Habilitar carreras cuando se ingrese el ciclo
            $('#CicloTexto').on('input', function() {
                var cicloTexto = $(this).val().trim();
                if (cicloTexto.length > 0) {
                    $('#carreraSelect').prop('disabled', false);
                } else {
                    $('#carreraSelect').prop('disabled', true);
                    $('#PensumId').prop('disabled', true);
                    $('#carreraSelect').val('');
                    $('#PensumId').val('');
                }
            });

            // Cargar pensúms cuando se seleccione carrera
            $('#carreraSelect').change(function() {
                var carreraId = $(this).val();
                if (carreraId) {
                    cargarPensums(carreraId);
                    $('#PensumId').prop('disabled', false);
                } else {
                    $('#PensumId').prop('disabled', true);
                    $('#PensumId').val('');
                }
            });

            // Cargar materias cuando se seleccione pensúm
            $('#PensumId').change(function() {
                var pensumId = $(this).val();
                if (pensumId) {
                    cargarMaterias(pensumId);
                }
            });

            // Agregar materia
            $('#btnAgregarMateria').click(function() {
                agregarMateria();
            });

            // El promedio se ingresa manualmente (no se calcula automáticamente)
            // porque cada nota tiene un peso diferente
        });

        // Las carreras ya están cargadas en el modelo, no necesitamos cargarlas por AJAX

        function cargarPensums(carreraId) {
            $.get(`/api/pensums?carreraId=${carreraId}`, function(data) {
                var select = $('#PensumId');
                select.empty();
                select.append('<option value="">-- Seleccione un pensúm --</option>');
                
                data.forEach(function(pensum) {
                    select.append(`<option value="${pensum.pensumId}">Pensúm ${pensum.anio}</option>`);
                });
            });
        }

        function cargarMaterias(pensumId) {
            $.get(`/api/materias?pensumId=${pensumId}`, function(data) {
                materiasDisponibles = data;
                var select = $('#materiaSelect');
                select.empty();
                select.append('<option value="">-- Seleccione una materia --</option>');
                
                materiasDisponibles.forEach(function(materia) {
                    select.append(`<option value="${materia.materiaId}">${materia.nombreMateria}</option>`);
                });
            });
        }



        function agregarMateria() {
            var materiaId = $('#materiaSelect').val();
            var materiaText = $('#materiaSelect option:selected').text();
            
            if (!materiaId) {
                alert('Por favor seleccione una materia');
                return;
            }

            var materia = {
                materiaId: materiaId,
                nombreMateria: materiaText,
                nota1: parseFloat($('#nota1').val()) || 0,
                nota2: parseFloat($('#nota2').val()) || 0,
                nota3: parseFloat($('#nota3').val()) || 0,
                nota4: parseFloat($('#nota4').val()) || 0,
                nota5: parseFloat($('#nota5').val()) || 0,
                nota6: parseFloat($('#nota6').val()) || 0,
                promedio: parseFloat($('#promedio').val()) || 0,
                aprobada: $('#aprobada').is(':checked'),
                equivalencia: $('#equivalencia').is(':checked')
            };

            materiasAgregadas.push(materia);
            actualizarListaMaterias();
            limpiarFormularioMateria();
            habilitarBotonGuardar();
        }

        function actualizarListaMaterias() {
            var container = $('#materiasList');
            if (materiasAgregadas.length === 0) {
                container.html('<p class="text-muted">No hay materias agregadas aún.</p>');
                return;
            }

            var html = '';
            materiasAgregadas.forEach(function(materia, index) {
                html += `
                    <div class="alert alert-success d-flex justify-content-between align-items-center">
                        <div>
                            <strong>${materia.nombreMateria}</strong><br>
                            <small>Promedio: ${materia.promedio} | Aprobada: ${materia.aprobada ? 'Sí' : 'No'} | Equivalencia: ${materia.equivalencia ? 'Sí' : 'No'}</small>
                        </div>
                        <button type="button" class="btn btn-danger btn-sm" onclick="eliminarMateria(${index})">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                `;
            });
            
            container.html(html);
        }

        function eliminarMateria(index) {
            materiasAgregadas.splice(index, 1);
            actualizarListaMaterias();
            habilitarBotonGuardar();
        }

        function limpiarFormularioMateria() {
            $('#materiaSelect').val('');
            $('input[id^="nota"]').val('');
            $('#promedio').val('');
            $('#aprobada').prop('checked', true);
            $('#equivalencia').prop('checked', false);
            
            // Limpiar también el dropdown de materias
            $('#materiaSelect').empty().append('<option value="">-- Seleccione una materia --</option>');
        }

        function habilitarBotonGuardar() {
            $('#btnGuardar').prop('disabled', materiasAgregadas.length === 0);
        }

        // Enviar formulario
        $('form').submit(function(e) {
            if (materiasAgregadas.length === 0) {
                e.preventDefault();
                alert('Debe agregar al menos una materia antes de guardar');
                return false;
            }
            
            // Validar que todas las materias tengan notas válidas
            for (let i = 0; i < materiasAgregadas.length; i++) {
                var materia = materiasAgregadas[i];
                if (materia.promedio <= 0) {
                    e.preventDefault();
                    alert(`La materia "${materia.nombreMateria}" debe tener al menos una nota válida`);
                    return false;
                }
            }

            // Agregar las materias al formulario antes de enviar
            materiasAgregadas.forEach(function(materia, index) {
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].MateriaId`,
                    value: materia.materiaId
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota1`,
                    value: materia.nota1
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota2`,
                    value: materia.nota2
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota3`,
                    value: materia.nota3
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota4`,
                    value: materia.nota4
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota5`,
                    value: materia.nota5
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Nota6`,
                    value: materia.nota6
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Promedio`,
                    value: materia.promedio
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Aprobada`,
                    value: materia.aprobada
                }).appendTo('form');
                
                $('<input>').attr({
                    type: 'hidden',
                    name: `Materias[${index}].Equivalencia`,
                    value: materia.equivalencia
                }).appendTo('form');
            });
        });
    </script>
}
