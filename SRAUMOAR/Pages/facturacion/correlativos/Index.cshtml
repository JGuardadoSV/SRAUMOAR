@page
@model SRAUMOAR.Pages.facturacion.correlativos.IndexModel

@{
    ViewData["Title"] = "Administración de Correlativos";
}

<h1>Administración de Correlativos DTE</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nuevo Correlativo
    </a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Correlativos != null && Model.Correlativos.Any() && Model.CorrelativosPorAmbiente != null)
{
    @foreach (var grupo in Model.CorrelativosPorAmbiente)
    {
        var ambiente = grupo.Key;
        var correlativos = grupo.Value;
        var descripcionAmbiente = Model.ObtenerDescripcionAmbiente(ambiente);
        
        <div class="card mb-4">
            <div class="card-header @(ambiente == "00" ? "bg-warning text-dark" : "bg-success text-white")">
                <h5 class="mb-0">
                    <i class="bi bi-@(ambiente == "00" ? "exclamation-triangle" : "check-circle")"></i>
                    Ambiente: @descripcionAmbiente (@ambiente)
                    <span class="badge bg-light text-dark ms-2">@correlativos.Count() correlativo(s)</span>
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Tipo de Documento</th>
                                <th>Correlativo</th>
                                <th>Última Actualización</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in correlativos)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-info">@item.TipoDocumento</span>
                                        <span class="ms-2">@Model.ObtenerDescripcionTipoDocumento(item.TipoDocumento)</span>
                                    </td>
                                    <td>
                                        <strong class="text-primary">@Html.DisplayFor(modelItem => item.Correlativo)</strong>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.UltimaActualizacion)</td>
                                    <td>
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i> No hay correlativos registrados. 
        <a asp-page="Create" class="alert-link">Crear el primer correlativo</a>.
    </div>
}

