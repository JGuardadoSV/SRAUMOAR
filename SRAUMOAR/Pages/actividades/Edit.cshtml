@page
@model SRAUMOAR.Pages.actividades.EditModel

@{
    ViewData["Title"] = "Edicion de Actividad Academica";
}

<h1>Edición de actividad academica</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <div class="container-fluid px-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="ActividadAcademica.ActividadAcademicaId" />
                        <div class="row g-3">
                            @*  <div class="col-md-6 mb-3">
                                <label asp-for="ActividadAcademica.Fecha" class="form-label">
                                    <span class="text-danger">*</span> Fecha
                                </label>
                                <input asp-for="ActividadAcademica.Fecha" class="form-control" required />
                                <span asp-validation-for="ActividadAcademica.Fecha" class="text-danger"></span>
                            </div> *@

                            <div class="d-flex align-items-center justify-content-between">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox"
                                           asp-for="ActividadAcademica.ActivarIngresoNotas"
                                           style="width: 4em; height: 2em;"
                                           role="switch"
                                           id="switchNotas">
                                    <label class="form-check-label ms-2" for="switchNotas">
                                        <span class="h5">Habilitar ingreso de notas</span>
                                        <br>
                                        <small class="text-muted">
                                            Estado actual:
                                            <span class="badge bg-danger" id="estadoActual">Deshabilitado</span>
                                        </small>
                                    </label>
                                </div>
                                <div id="statusIcon" class="text-danger">
                                    <i class="bi bi-lock-fill" style="font-size: 2rem;"></i>
                                </div>
                            </div>

                            <!-- Alerta informativa -->
                            <div class="alert alert-warning mt-3 mb-0">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Importante:</strong> Al habilitar esta opción, los docentes podrán comenzar a ingresar notas en el sistema.
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="ActividadAcademica.Nombre" class="form-label">
                                    <span class="text-danger">*</span> Nombre
                                </label>
                                <input asp-for="ActividadAcademica.Nombre" class="form-control" required />
                                <span asp-validation-for="ActividadAcademica.Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="ActividadAcademica.TipoActividad" class="form-label">
                                    <span class="text-danger">*</span> Tipo de Actividad
                                </label>
                                <select asp-for="ActividadAcademica.TipoActividad" class="form-control" required>
                                    <option value="">Seleccione una opción</option>
                                    <option value="1">Laboratorio</option>
                                    <option value="2">Parcial</option>
                                </select>
                                <span asp-validation-for="ActividadAcademica.TipoActividad" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="ActividadAcademica.Porcentaje" class="form-label">
                                    <span class="text-danger">*</span> Porcentaje
                                </label>
                                <input asp-for="ActividadAcademica.Porcentaje" class="form-control" required />
                                <span asp-validation-for="ActividadAcademica.Porcentaje" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ActividadAcademica.FechaInicio" class="form-label">
                                    <span class="text-danger">*</span> Fecha de Inicio
                                </label>
                                <input asp-for="ActividadAcademica.FechaInicio" class="form-control" required />
                                <span asp-validation-for="ActividadAcademica.FechaInicio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ActividadAcademica.FechaFin" class="form-label">
                                    <span class="text-danger">*</span> Fecha de Fin
                                </label>
                                <input asp-for="ActividadAcademica.FechaFin" class="form-control" required />
                                <span asp-validation-for="ActividadAcademica.FechaFin" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ActividadAcademica.CicloId" class="form-label">Ciclo</label>
                                <select asp-for="ActividadAcademica.CicloId" class="form-select" asp-items="ViewBag.CicloId">
                                    <option value="">Seleccionar Ciclo</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ActividadAcademica.ArancelId" class="form-label">Arancel requerido</label>
                                <select asp-for="ActividadAcademica.ArancelId" class="form-select" asp-items="ViewBag.ArancelId">
                                    <option value="">Seleccionar Arancel</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <input type="submit" value="Actualizar" class="btn btn-primary" />
                                    <a asp-page="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* <div>
    <a asp-page="./Index">Back to List</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById('switchNotas').addEventListener('change', function() {
            const badge = document.getElementById('estadoActual');
            const icon = document.getElementById('statusIcon');

            if (this.checked) {
                badge.className = 'badge bg-success';
                badge.textContent = 'Habilitado';
                icon.className = 'text-success';
                icon.innerHTML = '<i class="bi bi-unlock-fill" style="font-size: 2rem;"></i>';
            } else {
                badge.className = 'badge bg-danger';
                badge.textContent = 'Deshabilitado';
                icon.className = 'text-danger';
                icon.innerHTML = '<i class="bi bi-lock-fill" style="font-size: 2rem;"></i>';
            }
        });

        // Inicializar el estado al cargar
        window.addEventListener('load', function() {
            const switchEl = document.getElementById('switchNotas');
            switchEl.dispatchEvent(new Event('change'));
        });
    </script>
}
