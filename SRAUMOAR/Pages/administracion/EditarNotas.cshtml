@page
@model SRAUMOAR.Pages.administracion.EditarNotasModel

@{
    ViewData["Title"] = "Editar Notas - Administración";
}

<style>
    .bg-gradient-admin {
        background: linear-gradient(90deg, #e3f2fd 0%, #f8f9fa 100%);
    }
    .icon-circle {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 2rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }
    .hover-card-pro {
        transition: transform 0.2s cubic-bezier(.4,2,.6,1), box-shadow 0.2s;
    }
    .hover-card-pro:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        z-index: 2;
    }
    .table-modern th, .table-modern td {
        vertical-align: middle;
        border-top: none;
    }
    .table-modern thead th {
        border-bottom: 2px solid #1976d2;
        font-size: 1rem;
        letter-spacing: 0.03em;
    }
    .table-modern tbody tr {
        transition: background 0.15s;
    }
    .table-modern tbody tr:hover {
        background: #e3f2fd;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8">
            <div class="bg-gradient-admin rounded-4 shadow p-4 text-center position-relative overflow-hidden">
                <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10" style="background: url('/wwwroot/assets/img/AdminLTELogo.png') center/contain no-repeat;"></div>
                <h1 class="fw-bold display-5 mb-2 text-primary">
                    <i class="bi bi-pencil-square me-2"></i>Editar Notas - Administración
                </h1>
                <p class="lead text-secondary mb-0">Seleccione un grupo para gestionar las calificaciones</p>
            </div>
        </div>
    </div>

    @if (Model.GruposConMaterias.Any())
    {
        <div class="row g-4 justify-content-center">
            @foreach (var grupo in Model.GruposConMaterias)
            {
                <div class="col-md-6 col-lg-4">
                    <a asp-page="./EditarNotasGrupo" asp-route-grupoId="@grupo.GrupoId" class="text-decoration-none">
                        <div class="card h-100 shadow-lg border-0 hover-card-pro">
                            <div class="card-body text-center p-4">
                                <div class="icon-circle bg-primary text-white mb-3 mx-auto">
                                    <i class="bi bi-people-fill fs-1"></i>
                                </div>
                                <h4 class="card-title mb-2 fw-semibold">@grupo.NombreGrupo</h4>
                                <p class="card-text text-muted small mb-2">
                                    <strong>Carrera:</strong> @grupo.NombreCarrera
                                </p>
                                <p class="card-text text-muted small mb-2">
                                    <strong>Materias:</strong> @grupo.CantidadMaterias
                                </p>
                                <p class="card-text text-muted small">
                                    <strong>Estudiantes:</strong> @grupo.CantidadEstudiantes
                                </p>
                            </div>
                            <div class="card-footer bg-light text-center py-3 border-0">
                                <span class="text-primary fw-semibold">Editar notas <i class="bi bi-arrow-right"></i></span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                        <h4 class="text-muted">No hay grupos disponibles</h4>
                        <p class="text-muted">No se encontraron grupos con materias asignadas para el ciclo actual.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@@media (max-width: 767.98px) {
    .display-5 { font-size: 2rem; }
    .icon-circle { width: 56px; height: 56px; font-size: 1.5rem; }
}
