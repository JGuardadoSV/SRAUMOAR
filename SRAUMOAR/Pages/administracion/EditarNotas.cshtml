@page
@model SRAUMOAR.Pages.administracion.EditarNotasModel

@{
    ViewData["Title"] = "Editar Notas - Administración";
}

<style>
    .bg-gradient-admin {
        background: linear-gradient(90deg, #e3f2fd 0%, #f8f9fa 100%);
    }
    .icon-circle {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 2rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }
    .hover-card-pro {
        transition: transform 0.2s cubic-bezier(.4,2,.6,1), box-shadow 0.2s;
    }
    .hover-card-pro:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        z-index: 2;
    }
    .table-modern th, .table-modern td {
        vertical-align: middle;
        border-top: none;
    }
    .table-modern thead th {
        border-bottom: 2px solid #1976d2;
        font-size: 1rem;
        letter-spacing: 0.03em;
    }
    .table-modern tbody tr {
        transition: background 0.15s;
    }
    .table-modern tbody tr:hover {
        background: #e3f2fd;
    }
    .bg-gradient-primary {
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
    }
    .card {
        border-radius: 12px;
        transition: all 0.3s ease;
    }
    .hover-card-pro {
        transition: transform 0.3s cubic-bezier(.4,2,.6,1), box-shadow 0.3s;
    }
    .hover-card-pro:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 12px 40px rgba(25, 118, 210, 0.2) !important;
    }
    .icon-circle {
        transition: transform 0.3s ease;
    }
    .hover-card-pro:hover .icon-circle {
        transform: scale(1.1) rotate(5deg);
    }
    
    @@media (max-width: 767.98px) {
        .display-5 { font-size: 2rem; }
        .icon-circle { width: 56px; height: 56px; font-size: 1.5rem; }
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <div class="bg-gradient-admin rounded-4 shadow-lg p-5 text-center position-relative overflow-hidden">
                <div class="position-absolute top-0 start-0 w-100 h-100 opacity-5" style="background: url('/wwwroot/assets/img/AdminLTELogo.png') center/contain no-repeat;"></div>
                <div class="position-relative z-1">
                    <div class="mb-3">
                        <i class="bi bi-clipboard-data-fill text-primary" style="font-size: 3.5rem;"></i>
                    </div>
                    <h1 class="fw-bold display-4 mb-3 text-primary">
                        Gestión de Calificaciones
                    </h1>
                    <p class="lead text-secondary mb-2 fw-semibold">Administración Académica</p>
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        Seleccione un grupo para editar y gestionar las notas de los estudiantes
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Selector de Ciclo -->
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <label for="cicloSelect" class="form-label fw-semibold mb-2">
                                <i class="bi bi-calendar-check text-primary me-2"></i>
                                Ciclo Académico
                            </label>
                        </div>
                        <div class="col-md-8">
                            <select id="cicloSelect" class="form-select form-select-lg" asp-items="ViewBag.CicloId" onchange="cambiarCiclo()">
                                <option value="">Selecciona un ciclo</option>
                            </select>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Puede seleccionar cualquier ciclo registrado. Por defecto se muestra el ciclo actual.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.GruposConMaterias.Any())
    {
        <div class="row g-4 justify-content-center">
            @foreach (var grupo in Model.GruposConMaterias)
            {
                <div class="col-md-6 col-lg-4">
                    <a asp-page="./EditarNotasGrupo" asp-route-grupoId="@grupo.GrupoId" class="text-decoration-none">
                        <div class="card h-100 shadow-lg border-0 hover-card-pro position-relative overflow-hidden">
                            <!-- Badge decorativo superior -->
                            <div class="position-absolute top-0 end-0 bg-primary opacity-10" style="width: 50px; height: 50px; border-radius: 0 0 0 50px; z-index: 0;"></div>
                            
                            <div class="card-body p-4 position-relative" style="z-index: 1;">
                                <!-- Header con icono y título -->
                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-circle bg-primary text-white me-3 flex-shrink-0" style="width: 60px; height: 60px; font-size: 1.5rem;">
                                        <i class="bi bi-people-fill"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h4 class="card-title mb-0 fw-bold text-dark">@grupo.NombreGrupo</h4>
                                        <small class="text-muted">Grupo Académico</small>
                                    </div>
                                </div>

                                <!-- Información del grupo -->
                                <div class="mb-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-mortarboard-fill text-primary me-2"></i>
                                        <span class="text-dark"><strong>Carrera:</strong> <span class="text-muted">@grupo.NombreCarrera</span></span>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-person-badge-fill text-success me-2"></i>
                                        <span class="text-dark"><strong>Docente:</strong> <span class="text-muted">@grupo.NombreDocente</span></span>
                                    </div>
                                </div>

                                <!-- Estadísticas -->
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <div class="bg-light rounded p-2 text-center">
                                            <div class="d-flex align-items-center justify-content-center mb-1">
                                                <i class="bi bi-book-fill text-info me-1"></i>
                                                <span class="fw-bold text-dark fs-5">@grupo.CantidadMaterias</span>
                                            </div>
                                            <small class="text-muted d-block">Materias</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="bg-light rounded p-2 text-center">
                                            <div class="d-flex align-items-center justify-content-center mb-1">
                                                <i class="bi bi-people-fill text-warning me-1"></i>
                                                <span class="fw-bold text-dark fs-5">@grupo.CantidadEstudiantes</span>
                                            </div>
                                            <small class="text-muted d-block">Estudiantes</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Footer con acción -->
                            <div class="card-footer bg-gradient-primary text-white text-center py-3 border-0">
                                <span class="fw-semibold">
                                    <i class="bi bi-pencil-square me-2"></i>Editar Notas
                                    <i class="bi bi-arrow-right ms-2"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                        <h4 class="text-muted">No hay grupos disponibles</h4>
                        <p class="text-muted">No se encontraron grupos con materias asignadas para el ciclo seleccionado.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function cambiarCiclo() {
            var cicloSelect = document.getElementById('cicloSelect');
            var cicloId = cicloSelect.value;
            
            if (cicloId && cicloId !== '') {
                // Recargar la página con el nuevo ciclo seleccionado
                var url = '/administracion/EditarNotas?cicloelegido=' + cicloId;
                window.location.href = url;
            }
        }
    </script>
}
