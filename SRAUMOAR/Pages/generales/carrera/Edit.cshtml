@page
@model SRAUMOAR.Pages.generales.carrera.EditModel

@{
    ViewData["Title"] = "Editar Carrera";
}

<div class="container-fluid px-0">
    <div class="row justify-content-center mt-4">
        <div class="col-md-10 col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white border-bottom p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-pencil-square text-primary fs-3"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold text-primary">Editar Carrera</h3>
                            <p class="text-muted mb-0 small">Modifique los datos de la carrera seleccionada</p>
                        </div>
                    </div>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                        <input type="hidden" asp-for="Carrera.CarreraId" />
                        
                        <div class="row g-4">
                            <!-- Nombre de Carrera -->
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="Carrera.NombreCarrera" class="form-control rounded-3" placeholder="Nombre" />
                                    <label asp-for="Carrera.NombreCarrera" class="text-muted"><i class="bi bi-fonts me-1"></i> Nombre de la Carrera</label>
                                    <span asp-validation-for="Carrera.NombreCarrera" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- Código de Carrera -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Carrera.CodigoCarrera" class="form-control rounded-3" placeholder="Código" />
                                    <label asp-for="Carrera.CodigoCarrera" class="text-muted"><i class="bi bi-hash me-1"></i> Código de Carrera</label>
                                    <span asp-validation-for="Carrera.CodigoCarrera" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>
                            
                            <!-- Facultad -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Carrera.FacultadId" class="form-select rounded-3" asp-items="ViewBag.FacultadId">
                                        <option value="">-- Seleccione una Facultad --</option>
                                    </select>
                                    <label asp-for="Carrera.FacultadId" class="text-muted"><i class="bi bi-bank me-1"></i> Facultad</label>
                                    <span asp-validation-for="Carrera.FacultadId" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- Duración -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Carrera.Duracion" class="form-control rounded-3" placeholder="Duración" />
                                    <label asp-for="Carrera.Duracion" class="text-muted"><i class="bi bi-calendar3 me-1"></i> Duración (Años)</label>
                                    <span asp-validation-for="Carrera.Duracion" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- Ciclos -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Carrera.Ciclos" class="form-control rounded-3" placeholder="Ciclos" />
                                    <label asp-for="Carrera.Ciclos" class="text-muted"><i class="bi bi-arrow-repeat me-1"></i> Total Ciclos</label>
                                    <span asp-validation-for="Carrera.Ciclos" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- Estado -->
                            <div class="col-md-4 d-flex align-items-center">
                                <div class="form-check form-switch fs-5 w-100">
                                    <input class="form-check-input" type="checkbox" role="switch" asp-for="Carrera.Activa" />
                                    <label class="form-check-label text-muted ms-2" asp-for="Carrera.Activa">
                                        Estado: <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 ms-1">Activa</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5">
                            <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-lg me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}