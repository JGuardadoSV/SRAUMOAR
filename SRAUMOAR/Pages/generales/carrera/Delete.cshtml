@page
@model SRAUMOAR.Pages.generales.carrera.DeleteModel

@{
    ViewData["Title"] = "Eliminar Carrera";
}

<div class="container-fluid px-0">
    <div class="row justify-content-center mt-4">
        <div class="col-md-10 col-lg-8">
            <div class="alert alert-danger border-0 shadow-sm rounded-4 mb-4 d-flex align-items-center p-4">
                <i class="bi bi-exclamation-triangle-fill fs-1 text-danger me-4"></i>
                <div>
                    <h4 class="alert-heading fw-bold mb-1">¿Está seguro de eliminar esta carrera?</h4>
                    <p class="mb-0">Esta acción no se puede deshacer y puede afectar a registros vinculados a esta carrera.</p>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5">
                    <h5 class="text-danger mb-4 border-bottom border-danger pb-2 fw-semibold">Información de la Carrera</h5>
                    
                    <dl class="row g-3 mb-0">
                        <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Carrera.NombreCarrera)</dt>
                        <dd class="col-sm-8 mb-3 fs-5">@Html.DisplayFor(model => model.Carrera.NombreCarrera)</dd>

                        <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Carrera.CodigoCarrera)</dt>
                        <dd class="col-sm-8 mb-3">
                            <span class="badge bg-secondary fs-6">@Html.DisplayFor(model => model.Carrera.CodigoCarrera)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Carrera.Facultad)</dt>
                        <dd class="col-sm-8 mb-3 fs-5">
                            <i class="bi bi-bank me-1 text-muted"></i> @Html.DisplayFor(model => model.Carrera.Facultad.NombreFacultad)
                        </dd>

                        <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Carrera.Duracion)</dt>
                        <dd class="col-sm-8 mb-3 fs-5">@Html.DisplayFor(model => model.Carrera.Duracion) años</dd>

                        <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Carrera.Ciclos)</dt>
                        <dd class="col-sm-8 mb-3 fs-5">@Html.DisplayFor(model => model.Carrera.Ciclos) ciclos</dd>

                        <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Carrera.Activa)</dt>
                        <dd class="col-sm-8 mb-0">
                            @if (Model.Carrera.Activa)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-2 py-1">Activa</span>
                            }
                            else
                            {
                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-2 py-1">Inactiva</span>
                            }
                        </dd>
                    </dl>
                </div>
                
                <div class="card-footer bg-light border-0 p-4">
                    <form method="post" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Carrera.CarreraId" />
                        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger rounded-pill px-5 shadow-sm">
                            <i class="bi bi-trash me-1"></i> Confirmar Eliminación
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
