@page
@model SRAUMOAR.Pages.generales.carrera.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Carrera[0].NombreCarrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera[0].CodigoCarrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera[0].Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera[0].Ciclos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera[0].Activa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera[0].Facultad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Carrera) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCarrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoCarrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciclos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facultad.NombreFacultad)
            </td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Acciones
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-page="/generales/materias/materias" asp-route-id="@item.CarreraId">Ver materias <i class="bi bi-eye"></i></a></li>
                        <li><a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.CarreraId">Editar <i class="bi bi-pencil"></i></a></li>
                        <li><a class="dropdown-item" asp-page="./Details" asp-route-id="@item.CarreraId">Detalles <i class="bi bi-info"></i></a></li>
                        <li><a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.CarreraId">Eliminar <i class="bi bi-trash"></i></a></li>
                    </ul>
                </div>

            </td>
        </tr>
}
    </tbody>
</table>
