@page
@model SRAUMOAR.Pages.generales.carrera.IndexModel
@{
    ViewData["Title"] = "Carreras";
}

<div class="row mb-4 align-items-center">
    <div class="col-8">
        <h2 class="mt-2 text-primary"><i class="bi bi-journal-bookmark"></i> Gestión de Carreras</h2>
    </div>
    <div class="col-4 text-end">
        <a asp-page="Create" class="btn btn-primary rounded-pill shadow-sm">
            <i class="bi bi-plus-lg"></i> Nueva Carrera
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="rounded-start">@Html.DisplayNameFor(model => model.Carrera[0].NombreCarrera)</th>
                        <th>@Html.DisplayNameFor(model => model.Carrera[0].CodigoCarrera)</th>
                        <th>@Html.DisplayNameFor(model => model.Carrera[0].Duracion)</th>
                        <th>@Html.DisplayNameFor(model => model.Carrera[0].Ciclos)</th>
                        <th>@Html.DisplayNameFor(model => model.Carrera[0].Facultad)</th>
                        <th>@Html.DisplayNameFor(model => model.Carrera[0].Activa)</th>
                        <th class="text-center rounded-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Carrera)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                        <i class="bi bi-journal-bookmark text-primary fs-5"></i>
                                    </div>
                                    <span class="fw-semibold">@Html.DisplayFor(modelItem => item.NombreCarrera)</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.CodigoCarrera)</span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Duracion) años</td>
                            <td>@Html.DisplayFor(modelItem => item.Ciclos) ciclos</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-bank text-muted me-2"></i>
                                    <span>@Html.DisplayFor(modelItem => item.Facultad.NombreFacultad)</span>
                                </div>
                            </td>
                            <td>
                                @if (item.Activa)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-2 py-1">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-2 py-1">Inactiva</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm">
                                    <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Acciones
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                        <li>
                                            <a class="dropdown-item py-2" asp-page="/generales/pensum/Index" asp-route-id="@item.CarreraId">
                                                <i class="bi bi-card-list me-2 text-primary"></i> Planes de Estudio
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item py-2" asp-page="./Edit" asp-route-id="@item.CarreraId">
                                                <i class="bi bi-pencil-square me-2 text-secondary"></i> Editar
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item py-2" asp-page="./Details" asp-route-id="@item.CarreraId">
                                                <i class="bi bi-eye me-2 text-info"></i> Detalles
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item py-2 text-danger" asp-page="./Delete" asp-route-id="@item.CarreraId">
                                                <i class="bi bi-trash me-2"></i> Eliminar
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Carrera.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <p class="mb-0">No hay carreras registradas en el sistema.</p>
                </div>
            }
        </div>
    </div>
</div>