@page
@model SRAUMOAR.Pages.generales.carrera.DetailsModel

@{
    ViewData["Title"] = "Detalles";
}
<!DOCTYPE html>
<html lang="es">
<body>
    <header class="bg-primary text-white text-center py-4">
        <h1>Detalles de la Carrera</h1>
    </header>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-dark text-white text-center">
                <h4 class="fs-4 fw-semibold text-white formal-text">Carreras</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-mortarboard me-2">
                        @Html.DisplayNameFor(model => model.Carrera.NombreCarrera)
                    </dt>
                    <dd class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-info-circle">
                        @Html.DisplayFor(model => model.Carrera.NombreCarrera)
                    </dd>
                </dl>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-book me-2">
                        @Html.DisplayNameFor(model => model.Carrera.CodigoCarrera)
                    </dt>
                    <dd class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-info-circle">
                        @Html.DisplayFor(model => model.Carrera.CodigoCarrera)
                </dl>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-calendar3 me-2">
                        @Html.DisplayNameFor(model => model.Carrera.Duracion)
                    </dt>
                    <dd class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-info-circle">
                        @Html.DisplayFor(model => model.Carrera.Duracion)
                    </dd>
                </dl>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-calendar3 me-2">
                        @Html.DisplayNameFor(model => model.Carrera.Ciclos)
                    </dt>
                    <dd class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-info-circle">
                        @Html.DisplayFor(model => model.Carrera.Ciclos)
                    </dd>
                </dl>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-toggle-on">
                        @Html.DisplayNameFor(model => model.Carrera.Activa)
                    </dt>
                    <dd class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-info-circle">
                        @Html.DisplayFor(model => model.Carrera.Activa)
                    </dd>
                </dl>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-mortarboard">
                        @Html.DisplayNameFor(model => model.Carrera.Facultad)
                    </dt>
                    <dd class="col-sm-4 text-left fw-semibold fs-5 fw-semibold bi bi-info-circle">
                        @Html.DisplayFor(model => model.Carrera.Facultad.NombreFacultad)  @*REVISAR*@
                    </dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-page="./Edit" asp-route-id="@Model.Carrera.CarreraId" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-page="./Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</body>
</html>

