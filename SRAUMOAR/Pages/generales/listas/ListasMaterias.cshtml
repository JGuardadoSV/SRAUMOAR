@page
@model SRAUMOAR.Pages.generales.listas.ListasMateriasModel
@{
    ViewData["Title"] = "Gestión de Materias";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
               @*  <div class="col-sm-6">
                     <h1 class="m-0">
                        <i class="bi bi-journal-bookmark-fill text-primary me-2"></i>
                        
                    </h1>
                </div> *@
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#"><i class="bi bi-house-door"></i> Inicio</a></li>
                        <li class="breadcrumb-item"><i class="bi bi-gear"></i> Generales</li>
                        <li class="breadcrumb-item active">Materias</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary card-outline shadow">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="bi bi-list-ul me-2"></i>
                                Lista de Materias y Grupos
                            </h3>
                           @*  <div class="card-tools">
                                <a asp-page="Create" class="btn btn-primary btn-sm">
                                    <i class="bi bi-plus-circle me-1"></i>
                                    Nueva Materia
                                </a>
                            </div> *@ 
                            <h4 style="text-align: center;display: block">@Model.MateriasGrupo[0].Grupo.Nombre</h4>
                        </div>
                       
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th class="text-center" style="width: 80px;">
                                                <i class="bi bi-door-open me-1"></i>
                                                @Html.DisplayNameFor(model => model.MateriasGrupo[0].Aula)
                                            </th>
                                            <th class="text-center" style="width: 100px;">
                                                <i class="bi bi-clock me-1"></i>
                                                Horario
                                            </th>
                                            <th>
                                                <i class="bi bi-book me-1"></i>
                                                @Html.DisplayNameFor(model => model.MateriasGrupo[0].Materia)
                                            </th>
                                           @*  <th class="text-center" style="width: 80px;">
                                                <i class="bi bi-people me-1"></i>
                                                @Html.DisplayNameFor(model => model.MateriasGrupo[0].Grupo)
                                            </th> *@
                                            <th>
                                                <i class="bi bi-person-badge me-1"></i>
                                                @Html.DisplayNameFor(model => model.MateriasGrupo[0].Docente)
                                            </th>
                                            <th class="text-center" style="width: 140px;">
                                                <i class="bi bi-gear me-1"></i>
                                                Acciones
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.MateriasGrupo)
                                        {
                                            <tr class="align-middle">
                                                <td class="text-center">
                                                    <span class="badge bg-info fs-6">
                                                        @Html.DisplayFor(modelItem => item.Aula)
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="d-flex flex-column">
                                                        <small class="text-success fw-bold">
                                                            <i class="bi bi-play-circle me-1"></i>
                                                            @Html.DisplayFor(modelItem => item.HoraInicio)
                                                        </small>
                                                        <small class="text-danger fw-bold">
                                                            <i class="bi bi-stop-circle me-1"></i>
                                                            @Html.DisplayFor(modelItem => item.HoraFin)
                                                        </small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                            <i class="bi bi-journal-text text-white"></i>
                                                        </div>
                                                        <div>
                                                            <div class="fw-bold text-primary">
                                                                @Html.DisplayFor(modelItem => item.Materia.NombreMateria)
                                                            </div>
                                                            <small class="text-muted">Código de Materia</small>
                                                        </div>
                                                    </div>
                                                </td>
                                               @*  <td class="text-center">
                                                    <span class="badge bg-warning text-dark fs-6">
                                                        <i class="bi bi-hash me-1"></i>
                                                        @Html.DisplayFor(modelItem => item.Grupo.Nombre)
                                                    </span>
                                                </td> *@
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                            <i class="bi bi-person-check text-white"></i>
                                                        </div>
                                                        <div>
                                                            <div class="fw-bold">
                                                                @Html.DisplayFor(modelItem => item.Docente.Nombres) @Html.DisplayFor(modelItem => item.Docente.Apellidos)
                                                            </div>
                                                            <small class="text-muted">Docente Asignado</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                       @*  <a asp-page="./ListadoEstudiantes" asp-route-id="@item.MateriasGrupoId" asp-route-lista="true"
                                                           class="btn btn-warning btn-sm"
                                                           title="Editar">
                                                            <i class="bi bi-printer"></i>
                                                        </a> *@
                                                        <button class="btn btn-warning btn-sm"  onclick="abrirPdfEnPopup('/generales/listas/listadoPdf?id=@item.MateriasGrupoId')">  <i class="bi bi-printer"></i> Imprimir</button>
                                                      @*   <a asp-page="./Details" asp-route-id="@item.MateriasGrupoId"
                                                           class="btn btn-info btn-sm"
                                                           title="Ver Detalles">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <a asp-page="./Delete" asp-route-id="@item.MateriasGrupoId"
                                                           class="btn btn-danger btn-sm"
                                                           title="Eliminar"
                                                           onclick="return confirm('¿Está seguro de eliminar este registro?')">
                                                            <i class="bi bi-trash"></i>
                                                        </a> *@
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="row align-items-center">
                                <div class="col-sm-6">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Total de registros: @Model.MateriasGrupo.Count()
                                    </small>
                                </div>
                                <div class="col-sm-6 text-end">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar-check me-1"></i>
                                        Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>