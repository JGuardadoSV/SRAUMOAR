@page
@model SRAUMOAR.Pages.generales.ciclos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row mb-4 align-items-center">
    <div class="col-sm-6">
        <h4 class="mb-0">Eliminar Ciclo</h4>
    </div>
    <div class="col-sm-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent justify-content-sm-end mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house-door-fill"></i></a></li>
                <li class="breadcrumb-item"><a asp-page="./Index">Administración de ciclos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-octagon-fill me-2"></i>Confirmación de Eliminación</h5>
            </div>
            
            <div class="card-body">
                <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-shield-fill-exclamation fs-3 me-3"></i>
                    <div>
                        <strong>¿Está seguro de que desea eliminar este ciclo?</strong><br/>
                        Esta acción es permanente y no se puede deshacer.
                    </div>
                </div>

                <div class="bg-light p-3 rounded mb-4">
                    <div class="row mb-2">
                        <div class="col-5 fw-bold text-muted">@Html.DisplayNameFor(model => model.Ciclo.NCiclo)</div>
                        <div class="col-7">@Html.DisplayFor(model => model.Ciclo.NCiclo)</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 fw-bold text-muted">@Html.DisplayNameFor(model => model.Ciclo.anio)</div>
                        <div class="col-7">@Html.DisplayFor(model => model.Ciclo.anio)</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 fw-bold text-muted">@Html.DisplayNameFor(model => model.Ciclo.FechaInicio)</div>
                        <div class="col-7">@Html.DisplayFor(model => model.Ciclo.FechaInicio)</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 fw-bold text-muted">@Html.DisplayNameFor(model => model.Ciclo.FechaFin)</div>
                        <div class="col-7">@Html.DisplayFor(model => model.Ciclo.FechaFin)</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 fw-bold text-muted">Estado</div>
                        <div class="col-7">
                            @if(Model.Ciclo.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </div>
                    </div>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Ciclo.Id" />
                    <div class="d-flex justify-content-end gap-2 border-top pt-3">
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger fw-bold">
                            <i class="bi bi-trash-fill me-1"></i> Eliminar permanentemente
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
