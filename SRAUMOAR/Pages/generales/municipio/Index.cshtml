@page
@model SRAUMOAR.Pages.generales.municipio.IndexModel

@{
    ViewData["Title"] = "Municipios";
}
<div class="row mb-4 align-items-center">
    <div class="col-sm-6">
        <h4 class="mb-0">Administración de Municipios</h4>
    </div>
    <div class="col-sm-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent justify-content-sm-end mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house-door-fill"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Municipios</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-3">
        <form method="get" class="row align-items-end g-3">
            <div class="col-md-6 col-lg-4">
                <label for="id" class="form-label fw-bold text-muted mb-1"><i class="bi bi-funnel-fill me-1"></i>Filtrar por Distrito</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-map text-primary"></i></span>
                    <select name="id" asp-for="DistritoFiltradoId" class="form-select" asp-items="ViewBag.DistritoId" onchange="this.form.submit()">
                        <option value="">-- Todos los Municipios --</option>
                    </select>
                </div>
            </div>
            @if (Model.DistritoFiltradoId.HasValue)
            {
                <div class="col-md-auto">
                    <a asp-page="./Index" asp-route-id="" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Limpiar Filtro
                    </a>
                </div>
            }
        </form>
    </div>
</div>

@{
    var isFiltered = Model.DistritoFiltradoId.HasValue;
}

@if (isFiltered)
{
    <div class="alert alert-info d-flex align-items-center mb-4 shadow-sm" role="alert">
        <i class="bi bi-funnel-fill fs-4 me-3"></i>
        <div class="flex-grow-1">
            <strong>Vista Filtrada:</strong> Estás viendo únicamente los municipios correspondientes al Distrito seleccionado.
        </div>
        <a asp-page="./Index" asp-route-id="" class="btn btn-outline-info btn-sm ms-3 fw-bold">
            <i class="bi bi-x-circle me-1"></i> Ver Todos
        </a>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-building me-2"></i>Listado de Municipios
            @if (isFiltered && Model.Municipio.Any())
            {
                <span class="badge bg-light text-primary ms-2 rounded-pill">Distrito: @Model.Municipio.First().Distrito.NombreDistrito</span>
            }
        </h5>
        <a asp-page="./Create" class="btn btn-light btn-sm text-primary">
            <i class="bi bi-plus-circle me-1"></i> Registrar nuevo
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Municipio[0].NombreMunicipio)</th>
                        <th>@Html.DisplayNameFor(model => model.Municipio[0].Distrito)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Municipio)
                    {
                        <tr>
                            <td class="fw-semibold">@Html.DisplayFor(modelItem => item.NombreMunicipio)</td>
                            <td>
                                <span class="badge bg-secondary rounded-pill fw-normal px-2 py-1">
                                    <i class="bi bi-map-fill me-1"></i>
                                    @Html.DisplayFor(modelItem => item.Distrito.NombreDistrito)
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-page="./Details" asp-route-id="@item.MunicipioId" class="btn btn-info btn-sm text-white me-1 mb-1" title="Detalles">
                                    <i class="bi bi-info-circle"></i> Detalles
                                </a>
                                <a asp-page="./Edit" asp-route-id="@item.MunicipioId" class="btn btn-success btn-sm me-1 mb-1" title="Editar">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Municipio.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-2 d-block mb-2"></i>
                                No se encontraron municipios registrados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>