@page
@model SRAUMOAR.Pages.generales.departamento.CreateModel

@{
    ViewData["Title"] = "Create";
}

<header class="bg-primary text-white text-center py-3 mb-4">
    <h1>Nuevo Departamento</h1>
</header>
<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Departamento.NombreDepartamento" class="form-label"></label>
                            <input asp-for="Departamento.NombreDepartamento" class="form-control" placeholder="Ingrese el nombre del departamento" />
                            <span asp-validation-for="Departamento.NombreDepartamento" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
