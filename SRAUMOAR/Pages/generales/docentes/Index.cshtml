@page
@model SRAUMOAR.Pages.generales.docentes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Dui)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].FechaDeNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Profesion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Docente) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dui)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesion.NombreProfesion)
            </td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Acciones
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.DocenteId">Editar <i class="bi bi-pencil-square"></i></a></li>
                        <li><a class="dropdown-item" asp-page="./Details" asp-route-id="@item.DocenteId">Detalles <i class="bi bi-info-circle"></i></a></li>
                        <li><a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.DocenteId">Eliminar <i class="bi bi-trash"></i></a></li>
                    </ul>
                </div>


            </td>
        </tr>
}
    </tbody>
</table>
