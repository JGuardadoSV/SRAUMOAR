@page
@model SRAUMOAR.Pages.generales.docentes.IndexModel

@{
    ViewData["Title"] = "Docentes";
}

<div class="container-fluid py-4">
    <!-- Header Area -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-0 text-gray-800 fw-bold">Listado de Docentes</h2>
            <p class="text-muted mb-0 mt-1">Gestión administrativa del personal docente</p>
        </div>
        <div>
            <a asp-page="./Create" class="btn btn-primary rounded-pill px-4 shadow-sm fw-medium d-flex align-items-center gap-2">
                <i class="bi bi-plus-circle"></i> Nuevo Docente
            </a>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-muted">
                        <tr>
                            <th class="ps-4 fw-semibold border-bottom-0 pb-3 pt-4">@Html.DisplayNameFor(model => model.Docente[0].Nombres) y @Html.DisplayNameFor(model => model.Docente[0].Apellidos)</th>
                            <th class="fw-semibold border-bottom-0 pb-3 pt-4">@Html.DisplayNameFor(model => model.Docente[0].Dui)</th>
                            <th class="fw-semibold border-bottom-0 pb-3 pt-4">Contacto</th>
                            <th class="fw-semibold border-bottom-0 pb-3 pt-4">@Html.DisplayNameFor(model => model.Docente[0].Profesion)</th>
                            <th class="fw-semibold border-bottom-0 pb-3 pt-4">Usuario</th>
                            <th class="text-end pe-4 fw-semibold border-bottom-0 pb-3 pt-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var item in Model.Docente)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-primary" style="width: 40px; height: 40px;">
                                            @if (item.Genero == 0)
                                            {
                                                <i class="bi bi-gender-male fs-5"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-gender-female fs-5"></i>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-semibold text-dark">@Html.DisplayFor(modelItem => item.Nombres) @Html.DisplayFor(modelItem => item.Apellidos)</div>
                                            <div class="small text-muted"><i class="bi bi-house me-1"></i>@Html.DisplayFor(modelItem => item.Direccion)</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 px-2 py-1">@Html.DisplayFor(modelItem => item.Dui)</span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <div class="small"><i class="bi bi-telephone text-success me-2"></i>@Html.DisplayFor(modelItem => item.Telefono)</div>
                                        <div class="small"><i class="bi bi-envelope text-primary me-2"></i>@Html.DisplayFor(modelItem => item.Email)</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="bi bi-briefcase text-muted"></i>
                                        <span class="text-dark">@Html.DisplayFor(modelItem => item.Profesion.NombreProfesion)</span>
                                    </div>
                                </td>
                                <td>
                                    @if(item.Usuario?.ToString().Length > 0)
                                    {
                                        <a href="/autenticacion/AdministrarUsuario/@item.DocenteId/2" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                            <i class="bi bi-gear me-1"></i> Administrar
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/autenticacion/crearusuariodocente/@item.DocenteId/@item.Usuario?.IdUsuario" class="btn btn-sm btn-outline-success rounded-pill px-3">
                                            <i class="bi bi-person-plus me-1"></i> Crear
                                        </a>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle shadow-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="width: 32px; height: 32px;">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                            <li><a class="dropdown-item py-2 d-flex align-items-center gap-2" asp-page="./Details" asp-route-id="@item.DocenteId"><i class="bi bi-eye text-primary"></i> Ver detalles</a></li>
                                            <li><a class="dropdown-item py-2 d-flex align-items-center gap-2" asp-page="./Edit" asp-route-id="@item.DocenteId"><i class="bi bi-pencil-square text-warning"></i> Editar docente</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Enhanced Pagination -->
            <div class="d-flex justify-content-between align-items-center px-4 py-3 border-top bg-light rounded-bottom-4">
                <div>
                    <span class="text-muted small fw-medium">
                        Mostrando página <span class="text-dark fw-bold">@Model.PageNumber</span> de <span class="text-dark fw-bold">@Model.TotalPages</span>
                    </span>
                </div>
                <nav aria-label="Navegación de páginas">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link rounded-start-pill px-3" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber - 1)" aria-label="Anterior">
                                <i class="bi bi-chevron-left small"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link rounded-end-pill px-3" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber + 1)" aria-label="Siguiente">
                                <i class="bi bi-chevron-right small"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
