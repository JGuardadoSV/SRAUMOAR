@page
@model SRAUMOAR.Pages.generales.docentes.EditModel

@{
    ViewData["Title"] = "Editar";
}


<header class="bg-primary text-white text-center py-3 mb-4">
    <h1> Edición Docente</h1>
</header>
<hr />
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white text-center">
            <h4 class="fs-4 fw-semibold text-white formal-text">Docente</h4>
        </div>
        <div class="container mt-1">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="card-body">
                        <form method="post">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center" role="alert"></div>
                                <input type="hidden" asp-for="Docente.DocenteId" />
                                <div class="form-group">
                                    <label class="form-label fs-4 fw-semibold text-dark formal-text">Género</label>

                                    <div class="d-flex">
                                        <div class="form-check me-3">
                                            <input type="radio" asp-for="Docente.Genero" value="0" id="generoMasculino" class="form-check-input">
                                            <label class="form-check-label" for="generoMasculino">Masculino</label>
                                        </div>

                                        <div class="form-check">
                                            <input type="radio" asp-for="Docente.Genero" value="1" id="generoFemenino" class="form-check-input">
                                            <label class="form-check-label" for="generoFemenino">Femenino</label>
                                        </div>
                                    </div>

                                    <span asp-validation-for="Docente.Genero" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.Nombres" class="form-label fs-4 fw-semibold text-dark formal-text">Nombres</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-book"></i></span>
                                        <input asp-for="Docente.Nombres" class="form-control" placeholder="Ingrese los nombres del Docente" />
                                    </div>
                                    <br>
                                    <span asp-validation-for="Docente.Nombres" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.Apellidos" class="form-label fs-4 fw-semibold text-dark formal-text">Apellidos</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-book"></i></span>
                                        <input asp-for="Docente.Apellidos" class="form-control" placeholder="Ingrese Apellidos del Docente" />
                                    </div>
                                    <br>
                                    <span asp-validation-for="Docente.Apellidos" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.Dui" class="form-label fs-4 fw-semibold text-dark formal-text">Dui</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-book"></i></span>
                                        <input asp-for="Docente.Dui" class="form-control" placeholder="Ingrese Dui del Docente" />
                                    </div>
                                    <br>
                                    <span asp-validation-for="Docente.Dui" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.Telefono" class="form-label fs-4 fw-semibold text-dark formal-text">Teléfono</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-book"></i></span>
                                        <input asp-for="Docente.Telefono" class="form-control" pattern="\d{4}-\d{4}" placeholder="Ingrese teléfono del Docente" />
                                    </div>
                                    <br>
                                    <span asp-validation-for="Docente.Telefono" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.FechaDeNacimiento" class="form-label fs-4 fw-semibold text-dark formal-text">Fecha de Nacimiento</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-book"></i></span>
                                        <input asp-for="Docente.FechaDeNacimiento" class="form-control" placeholder="Fecha de Nacimiento" />
                                    </div>
                                    <br>
                                    <span asp-validation-for="Docente.FechaDeNacimiento" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.FechaDeNacimiento" class="form-label fs-4 fw-semibold text-dark formal-text">Fecha de Ingreso</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-book"></i></span>
                                        <input asp-for="Docente.FechaDeIngreso" class="form-control" placeholder="Fecha de Nacimiento" />
                                    </div>
                                    <br>
                                    <span asp-validation-for="Docente.FechaDeIngreso" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.Direccion" class="form-label fs-4 fw-semibold text-dark formal-text">Dirección</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-book"></i></span>
                                        <input asp-for="Docente.Direccion" class="form-control" placeholder="Ingrese Dirección" />
                                    </div>
                                    <br>
                                    <span asp-validation-for="Docente.Direccion" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.Email" class="form-label fs-4 fw-semibold text-dark formal-text">Correo Electronico</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-book"></i></span>
                                        <input asp-for="Docente.Email" class="form-control" placeholder="Ingrese Correo Electronico" />
                                    </div>
                                    <br>
                                    <span asp-validation-for="Docente.Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Docente.ProfesionId" class="form-label fs-4 fw-semibold text-dark formal-text">Profesión</label>
                                    <br>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-briefcase"></i></span>
                                        <select asp-for="Docente.ProfesionId" class="form-control" asp-items="ViewBag.ProfesionId"></select>
                                    </div>
                                    <br>
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-arrow-clockwise"></i> Actualizar
                                    </button>
                                </div>
                                <br>
                            </form>
                        </form>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<div class="text-center mt-3">
    <a asp-page="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
</div>

<style>
    /* Paleta y fundamentos */
    :root {
        --accent: #0d6efd;
        --accent-600: #0b5ed7;
        --ink: #212529;
        --muted: #6c757d;
        --bg-soft: #f8f9fa;
        --card-border: #e9ecef;
        --danger: #dc3545;
    }

    header.bg-primary {
        background: linear-gradient(135deg, var(--accent) 0%, #4ea1ff 100%);
        animation: fadeInDown 450ms ease-out both;
    }

    .card.shadow-lg {
        border: 1px solid var(--card-border);
        border-radius: 14px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 10px 25px rgba(13, 110, 253, 0.08);
        animation: raiseIn 420ms ease-out both;
    }

    .card-header.bg-dark.text-white.text-center {
        background: linear-gradient(180deg, #2b3035 0%, #1f2327 100%);
        border-bottom: 1px solid #2f353a;
    }

    .formal-text {
        letter-spacing: .2px;
    }

    /* Formulario */
    .container .card-body {
        padding-top: 1.25rem;
    }

    .form-label {
        color: var(--ink);
        margin-bottom: .35rem;
    }

    .input-group-text {
        background: var(--bg-soft);
        border-color: var(--card-border);
        color: var(--muted);
    }

    .form-control {
        border-color: var(--card-border);
        transition: border-color .2s ease, box-shadow .2s ease;
    }

    .form-control:focus {
        border-color: var(--accent);
        box-shadow: 0 0 0 .25rem rgba(13,110,253,.15);
    }

    .text-danger {
        color: var(--danger) !important;
    }

    .alert-danger {
        border: 1px solid rgba(220,53,69,.25);
        box-shadow: 0 4px 16px rgba(220,53,69,.08);
    }

    /* Botón principal */
    .btn.btn-primary.btn-lg {
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent-600) 100%);
        border: none;
        box-shadow: 0 8px 16px rgba(13,110,253,.2);
        transition: transform .06s ease, box-shadow .2s ease, filter .2s ease;
    }

    .btn.btn-primary.btn-lg:hover {
        filter: brightness(1.03);
        box-shadow: 0 10px 22px rgba(13,110,253,.24);
    }

    .btn.btn-primary.btn-lg:active {
        transform: translateY(1px);
    }

    .btn.btn-outline-secondary {
        border-color: var(--card-border);
        color: var(--ink);
        background: #fff;
    }

    .btn.btn-outline-secondary:hover {
        background: var(--bg-soft);
        border-color: var(--card-border);
    }

    /* Layout */
    .container.mt-5 { padding-top: .5rem; }
    .row.justify-content-center { gap: .25rem; }

    /* Responsivo */
    @@media (max-width: 768px) {
        .col-md-5 { width: 100%; }
        .card-body { padding: 1rem; }
        .btn.btn-primary.btn-lg { width: 100%; }
    }

    @@media (min-width: 1200px) {
        .col-md-5 { max-width: 520px; }
    }

    /* Animaciones sutiles */
    @@keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@keyframes raiseIn {
        from { opacity: 0; transform: translateY(6px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

