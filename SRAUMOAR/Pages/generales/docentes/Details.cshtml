@page
@model SRAUMOAR.Pages.generales.docentes.DetailsModel

@{
    ViewData["Title"] = "Detalles";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-0 text-gray-800 fw-bold">Detalles del Docente</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 mt-2">
                    <li class="breadcrumb-item"><a asp-page="./Index">Docentes</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Detalles</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
            <a asp-page="./Edit" asp-route-id="@Model.Docente.DocenteId" class="btn btn-primary rounded-pill px-4 shadow-sm">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Profile Column -->
        <div class="col-xl-4 col-lg-5 mb-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center pt-5 pb-4">
                    <div class="position-relative d-inline-block mb-4">
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center shadow mx-auto" style="width: 160px; height: 160px; border: 5px solid #fff;">
                            <i class="bi bi-person-video3 text-secondary" style="font-size: 6rem;"></i>
                        </div>
                    </div>
                    
                    <h4 class="mb-1 fw-bold text-dark">@Model.Docente.Nombres @Model.Docente.Apellidos</h4>
                    <p class="text-muted mb-4 fs-5"><i class="bi bi-briefcase me-2 text-primary"></i>@Model.Docente.Profesion.NombreProfesion</p>
                    
                    <hr class="text-muted my-4">
                    
                    <div class="d-flex flex-column gap-3 text-start px-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-envelope text-primary fs-5 me-3" style="width: 25px; text-align: center;"></i>
                            <div class="text-truncate">
                                <small class="text-muted d-block" style="font-size: 0.75rem;">@Html.DisplayNameFor(model => model.Docente.Email)</small>
                                <span class="fw-medium">@Html.DisplayFor(model => model.Docente.Email)</span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-telephone text-success fs-5 me-3" style="width: 25px; text-align: center;"></i>
                            <div>
                                <small class="text-muted d-block" style="font-size: 0.75rem;">@Html.DisplayNameFor(model => model.Docente.Telefono)</small>
                                <span class="fw-medium">@Html.DisplayFor(model => model.Docente.Telefono)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Details Column -->
        <div class="col-xl-8 col-lg-7">
            <!-- Personal Information -->
            <div class="card shadow-sm mb-4 border-0 rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-person-lines-fill me-2 bg-primary text-white p-2 rounded-circle fs-6"></i> Información Personal</h5>
                </div>
                <div class="card-body px-4 py-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 d-flex align-items-center h-100">
                                <i class="bi bi-person text-secondary fs-3 me-3"></i>
                                <div>
                                    <p class="text-muted mb-0 small text-uppercase fw-semibold" style="letter-spacing: 0.5px;">@Html.DisplayNameFor(model => model.Docente.Nombres)</p>
                                    <h6 class="mb-0 fw-bold fs-5">@Html.DisplayFor(model => model.Docente.Nombres)</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 d-flex align-items-center h-100">
                                <i class="bi bi-person-badge text-secondary fs-3 me-3"></i>
                                <div>
                                    <p class="text-muted mb-0 small text-uppercase fw-semibold" style="letter-spacing: 0.5px;">@Html.DisplayNameFor(model => model.Docente.Apellidos)</p>
                                    <h6 class="mb-0 fw-bold fs-5">@Html.DisplayFor(model => model.Docente.Apellidos)</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 d-flex align-items-center h-100">
                                <i class="bi bi-card-text text-info fs-3 me-3"></i>
                                <div>
                                    <p class="text-muted mb-0 small text-uppercase fw-semibold" style="letter-spacing: 0.5px;">@Html.DisplayNameFor(model => model.Docente.Dui)</p>
                                    <h6 class="mb-0 fw-bold fs-5">@Html.DisplayFor(model => model.Docente.Dui)</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 d-flex align-items-center h-100">
                                <i class="bi bi-calendar3 text-secondary fs-3 me-3"></i>
                                <div>
                                    <p class="text-muted mb-0 small text-uppercase fw-semibold" style="letter-spacing: 0.5px;">@Html.DisplayNameFor(model => model.Docente.FechaDeNacimiento)</p>
                                    <h6 class="mb-0 fw-bold fs-5">@Html.DisplayFor(model => model.Docente.FechaDeNacimiento)</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Institucional Section -->
                <div class="col-xl-6 mb-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                            <h5 class="mb-0 fw-bold text-success"><i class="bi bi-building me-2 bg-success text-white p-2 rounded-circle fs-6"></i> Institucional</h5>
                        </div>
                        <div class="card-body px-4 py-4">
                            <div class="mb-4">
                                <p class="text-muted mb-1 small text-uppercase fw-semibold"><i class="bi bi-calendar-check me-2"></i>@Html.DisplayNameFor(model => model.Docente.FechaDeIngreso)</p>
                                <div class="p-3 border border-success border-opacity-25 rounded-3 bg-success bg-opacity-10">
                                    <h6 class="mb-0 fw-bold text-dark fs-5">@Html.DisplayFor(model => model.Docente.FechaDeIngreso)</h6>
                                </div>
                            </div>
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-semibold"><i class="bi bi-briefcase me-2"></i>@Html.DisplayNameFor(model => model.Docente.Profesion)</p>
                                <div class="p-3 border border-success border-opacity-25 rounded-3 bg-success bg-opacity-10">
                                    <h6 class="mb-0 fw-bold text-dark fs-5">@Html.DisplayFor(model => model.Docente.Profesion.NombreProfesion)</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Residencia Section -->
                <div class="col-xl-6 mb-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                            <h5 class="mb-0 fw-bold text-warning" style="color:#d97706!important;"><i class="bi bi-geo-alt me-2 bg-warning text-white p-2 rounded-circle fs-6"></i> Residencia</h5>
                        </div>
                        <div class="card-body px-4 py-4">
                            <div class="h-100">
                                <p class="text-muted mb-1 small text-uppercase fw-semibold"><i class="bi bi-house me-2"></i>@Html.DisplayNameFor(model => model.Docente.Direccion)</p>
                                <div class="p-3 border border-warning border-opacity-25 rounded-3 bg-warning bg-opacity-10 h-100 min-vh-25">
                                    <h6 class="mb-0 fw-bold text-dark">@Html.DisplayFor(model => model.Docente.Direccion)</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

