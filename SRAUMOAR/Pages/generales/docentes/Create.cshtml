@page
@model SRAUMOAR.Pages.generales.docentes.CreateModel

@{
    ViewData["Title"] = "Crear Docente";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-0 text-gray-800 fw-bold">Nuevo Docente</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 mt-2">
                    <li class="breadcrumb-item"><a asp-page="./Index">Docentes</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Crear</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver a la lista
            </a>
        </div>
    </div>

    <!-- Main Form Section -->
    <form method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm rounded-3 mb-4" role="alert"></div>

        <div class="row">
            <!-- Columna Izquierda: Información Personal -->
            <div class="col-xl-6 mb-4">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                        <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-person-lines-fill me-2 bg-primary text-white p-2 rounded-circle fs-6"></i> Información Personal</h5>
                    </div>
                    <div class="card-body px-4 py-4">
                        <div class="row g-3">
                            <!-- Género -->
                            <div class="col-12 mb-2">
                                <label class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Género</label>
                                <div class="p-3 bg-light rounded-3">
                                    <div class="d-flex gap-4">
                                        <div class="form-check form-check-inline mb-0">
                                            <input type="radio" asp-for="Docente.Genero" value="0" id="generoMasculino" class="form-check-input border-secondary" checked>
                                            <label class="form-check-label fw-medium" for="generoMasculino"><i class="bi bi-gender-male text-primary me-1"></i> Masculino</label>
                                        </div>
                                        <div class="form-check form-check-inline mb-0">
                                            <input type="radio" asp-for="Docente.Genero" value="1" id="generoFemenino" class="form-check-input border-secondary">
                                            <label class="form-check-label fw-medium" for="generoFemenino"><i class="bi bi-gender-female text-danger me-1"></i> Femenino</label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Docente.Genero" class="text-danger small d-block mt-1"></span>
                                </div>
                            </div>
                            
                            <!-- Nombres -->
                            <div class="col-md-6">
                                <label asp-for="Docente.Nombres" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Nombres</label>
                                <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-person"></i></span>
                                    <input asp-for="Docente.Nombres" class="form-control border-start-0 fs-6" placeholder="Nombres del docente" />
                                </div>
                                <span asp-validation-for="Docente.Nombres" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <!-- Apellidos -->
                            <div class="col-md-6">
                                <label asp-for="Docente.Apellidos" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Apellidos</label>
                                <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-person-badge"></i></span>
                                    <input asp-for="Docente.Apellidos" class="form-control border-start-0 fs-6" placeholder="Apellidos del docente" />
                                </div>
                                <span asp-validation-for="Docente.Apellidos" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <!-- Fecha de Nacimiento -->
                            <div class="col-md-6">
                                <label asp-for="Docente.FechaDeNacimiento" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Fecha Nacimiento</label>
                                <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-calendar3"></i></span>
                                    <input asp-for="Docente.FechaDeNacimiento" type="date" class="form-control border-start-0 fs-6" />
                                </div>
                                <span asp-validation-for="Docente.FechaDeNacimiento" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <!-- DUI -->
                            <div class="col-md-6">
                                <label asp-for="Docente.Dui" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Documento Único (DUI)</label>
                                <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                    <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-card-text"></i></span>
                                    <input asp-for="Docente.Dui" class="form-control border-start-0 fs-6" placeholder="00000000-0" />
                                </div>
                                <span asp-validation-for="Docente.Dui" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna Derecha: Contacto e Institucional -->
            <div class="col-xl-6 mb-4">
                <div class="row h-100 g-4">
                    <!-- Tarjeta de Contacto -->
                    <div class="col-12">
                        <div class="card shadow-sm border-0 rounded-4">
                            <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                                <h5 class="mb-0 fw-bold text-success"><i class="bi bi-telephone-inbound me-2 bg-success text-white p-2 rounded-circle fs-6"></i> Contacto y Residencia</h5>
                            </div>
                            <div class="card-body px-4 py-4">
                                <div class="row g-3">
                                    <!-- Teléfono -->
                                    <div class="col-md-6">
                                        <label asp-for="Docente.Telefono" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Teléfono</label>
                                        <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-telephone"></i></span>
                                            <input asp-for="Docente.Telefono" class="form-control border-start-0 fs-6" pattern="\d{4}-\d{4}" placeholder="0000-0000" />
                                        </div>
                                        <span asp-validation-for="Docente.Telefono" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                    
                                    <!-- Email -->
                                    <div class="col-md-6">
                                        <label asp-for="Docente.Email" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Correo Electrónico</label>
                                        <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                                            <input asp-for="Docente.Email" class="form-control border-start-0 fs-6" placeholder="correo@ejemplo.com" />
                                        </div>
                                        <span asp-validation-for="Docente.Email" class="text-danger small mt-1 d-block"></span>
                                    </div>

                                    <!-- Dirección -->
                                    <div class="col-12">
                                        <label asp-for="Docente.Direccion" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Dirección Física</label>
                                        <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-house"></i></span>
                                            <input asp-for="Docente.Direccion" class="form-control border-start-0 fs-6" placeholder="Dirección completa" />
                                        </div>
                                        <span asp-validation-for="Docente.Direccion" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tarjeta Institucional -->
                    <div class="col-12">
                        <div class="card shadow-sm border-0 rounded-4">
                            <div class="card-header bg-white border-bottom-0 pt-4 pb-0 px-4">
                                <h5 class="mb-0 fw-bold text-warning" style="color:#d97706!important;"><i class="bi bi-briefcase me-2 bg-warning text-white p-2 rounded-circle fs-6"></i> Datos Institucionales</h5>
                            </div>
                            <div class="card-body px-4 py-4">
                                <div class="row g-3">
                                    <!-- Profesión -->
                                    <div class="col-md-6">
                                        <label asp-for="Docente.ProfesionId" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Profesión</label>
                                        <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-award"></i></span>
                                            <select asp-for="Docente.ProfesionId" class="form-select border-start-0 fs-6" asp-items="ViewBag.ProfesionId">
                                                <option value="">-- Seleccione una profesión --</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Docente.ProfesionId" class="text-danger small mt-1 d-block"></span>
                                    </div>

                                    <!-- Fecha de Ingreso -->
                                    <div class="col-md-6">
                                        <label asp-for="Docente.FechaDeIngreso" class="form-label fw-semibold text-secondary small text-uppercase" style="letter-spacing: 0.5px;">Fecha de Ingreso</label>
                                        <div class="input-group input-group-lg shadow-sm rounded-3 overflow-hidden">
                                            <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-calendar-check"></i></span>
                                            <input asp-for="Docente.FechaDeIngreso" type="date" class="form-control border-start-0 fs-6" />
                                        </div>
                                        <span asp-validation-for="Docente.FechaDeIngreso" class="text-danger small mt-1 d-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Boton de guardado global flotante -->
        <div class="position-sticky bottom-0 pb-4 pt-3 mt-2 bg-body-tertiary" style="z-index: 10;">
            <div class="d-flex justify-content-end align-items-center gap-3 bg-white p-3 rounded-4 shadow-sm border">
                <span class="text-muted small">Asegúrese de verificar la información antes de guardar.</span>
                <button type="button" class="btn btn-light rounded-pill px-4" onclick="window.location.href='Index'">Cancelar</button>
                <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm fw-bold">
                    <i class="bi bi-person-plus me-2"></i> Crear Docente
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <style>
        .form-control:focus, .form-select:focus {
            box-shadow: none;
            border-color: #dee2e6;
        }
        .input-group:focus-within {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25) !important;
            border-color: #86b7fe;
        }
        .input-group:focus-within .input-group-text, 
        .input-group:focus-within .form-control,
        .input-group:focus-within .form-select {
            border-color: #86b7fe;
        }
    </style>
}