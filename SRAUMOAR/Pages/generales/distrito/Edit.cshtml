@page
@model SRAUMOAR.Pages.generales.distrito.EditModel

@{
    ViewData["Title"] = "Editar";
}

<div class="row mb-4 align-items-center">
    <div class="col-sm-6">
        <h4 class="mb-0">Editar Distrito</h4>
    </div>
    <div class="col-sm-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent justify-content-sm-end mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house-door-fill"></i></a></li>
                <li class="breadcrumb-item"><a asp-page="./Index">Distritos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Actualizar información del distrito</h5>
            </div>
            
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center mb-3" role="alert"></div>
                    <input type="hidden" asp-for="Distrito.DistritoId" />
                    
                    <div class="form-group mb-4">
                        <label asp-for="Distrito.NombreDistrito" class="form-label fw-bold">Nombre del Distrito</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-map-fill text-primary"></i></span>
                            <input asp-for="Distrito.NombreDistrito" class="form-control" placeholder="Ingrese el nombre del Distrito" />
                        </div>
                        <span asp-validation-for="Distrito.NombreDistrito" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Distrito.DepartamentoId" class="form-label fw-bold">Departamento al que pertenece</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-map text-primary"></i></span>
                            <select asp-for="Distrito.DepartamentoId" class="form-select" asp-items="ViewBag.DepartamentoId"></select>
                        </div>
                        <span asp-validation-for="Distrito.DepartamentoId" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Volver al listado
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Actualizar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}