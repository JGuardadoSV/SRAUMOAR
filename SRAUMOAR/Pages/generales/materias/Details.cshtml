@page
@model SRAUMOAR.Pages.generales.materias.DetailsModel

@{
    ViewData["Title"] = "Detalle de Materia";
}

<div class="gm-shell">
    <div class="gm-hero">
        <div>
            <p class="gm-eyebrow">Consulta</p>
            <h1 class="gm-title">@Model.Materia.CodigoMateria</h1>
            <p class="gm-subtitle">@Model.Materia.NombreMateria</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-page="./Edit" asp-route-id="@Model.Materia.MateriaId" class="btn btn-light btn-sm">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-page="./Materias" asp-route-id="@Model.Materia.PensumId" class="btn btn-outline-light btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>

    <div class="gm-panel">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="gm-kv"><span>Nombre</span><strong>@Model.Materia.NombreMateria</strong></div>
            </div>
            <div class="col-md-6">
                <div class="gm-kv"><span>Código</span><strong>@Model.Materia.CodigoMateria</strong></div>
            </div>
            <div class="col-md-3">
                <div class="gm-kv"><span>Ciclo</span><strong>@Model.Materia.Ciclo</strong></div>
            </div>
            <div class="col-md-3">
                <div class="gm-kv"><span>Correlativo</span><strong>@Model.Materia.Correlativo</strong></div>
            </div>
            <div class="col-md-3">
                <div class="gm-kv"><span>UV</span><strong>@Model.Materia.uv</strong></div>
            </div>
            <div class="col-md-3">
                <div class="gm-kv"><span>Requisito Bachillerato</span><strong>@(Model.Materia.RequisitoBachillerato ? "Si" : "No")</strong></div>
            </div>
            <div class="col-12">
                <div class="gm-kv"><span>Pensum</span><strong>@Model.Materia.Pensum?.CodigoPensum</strong></div>
            </div>
        </div>

        <hr />

        <h5 class="mb-3"><i class="bi bi-link-45deg me-1"></i> Prerrequisitos</h5>
        @if (Model.Prerrequisitos.Any())
        {
            <div class="row g-2">
                @foreach (var prerrequisito in Model.Prerrequisitos)
                {
                    <div class="col-md-6">
                        <div class="gm-materia-item">
                            <div class="fw-semibold">@prerrequisito.PrerrequisoMateria?.CodigoMateria</div>
                            <small class="text-muted">@prerrequisito.PrerrequisoMateria?.NombreMateria</small>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="gm-empty py-3 mb-0">
                <i class="bi bi-info-circle"></i>
                <p>Esta materia no tiene prerrequisitos.</p>
            </div>
        }
    </div>
</div>