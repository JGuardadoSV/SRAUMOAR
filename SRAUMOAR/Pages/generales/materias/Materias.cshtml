@page
@model SRAUMOAR.Pages.generales.materias.MateriasModel

@{
    ViewData["Title"] = "Materias";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        .small-container {
            width: 100%;
            margin-bottom: 20px;
            overflow: hidden;
            font-size: 12px;
            padding: 8px;
            min-height: 120px;
        }
        .nav-tabs .nav-link.active {
            font-weight: bold;
            background-color: #f8f9fa;
        }
        .materia-nombre {
            font-size: 12px;
            line-height: 1.3;
            min-height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 5px 0;
        }
        .materia-codigo {
            font-size: 12px;
            padding: 5px 0;
        }
        .materia-uv {
            font-size: 12px;
            padding: 5px 0;
        }
        .ciclo-titulo {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 15px;
            padding: 5px;
            background-color: #f8f9fa;
            border-radius: 4px;
        }
        .ciclo-columna {
            padding: 0 5px;
        }
        @@media (max-width: 768px) {
            .ciclo-columna {
                width: 50%;
                float: left;
            }
            .small-container {
                min-height: 100px;
            }
        }
        @@media (max-width: 576px) {
            .ciclo-columna {
                width: 100%;
                float: none;
            }
        }

        
        .header-compact {
            background: linear-gradient(90deg, #196b20 0%, #2d8f35 100%);
            color: white;
            padding: 1rem 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 2px 10px rgba(25, 107, 32, 0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-info {
            display: flex;
            flex-direction: column;
            gap: 0.2rem;
        }

        .header-compact h1 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
            line-height: 1.2;
        }

        .header-compact .subtitle {
            font-size: 0.9rem;
            opacity: 0.9;
            margin: 0;
            font-weight: 400;
        }

        .header-actions {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        .btn-compact {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.85rem;
            border: none;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            white-space: nowrap;
        }

        .btn-pdf-compact {
            background: rgba(255, 255, 255, 0.15);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

            .btn-pdf-compact:hover {
                background: rgba(255, 255, 255, 0.25);
                color: white;
                transform: translateY(-1px);
            }

        .container-actions-compact {
            padding: 0.5rem 1.5rem;
            margin-bottom: 1rem;
        }

        .btn-nueva-materia-compact {
            background: #196b20;
            color: white;
            border: 1px solid #155518;
        }

            .btn-nueva-materia-compact:hover {
                background: #155518;
                color: white;
                transform: translateY(-1px);
            }

        .btn-compact i {
            font-size: 0.9rem;
        }

        /* Responsive para móviles */
            @@media (max-width: 768px) {
            .header-compact

        {
            flex-direction: column;
            text-align: center;
            padding: 1rem;
        }

        .header-info {
            align-items: center;
        }

        .header-actions {
            justify-content: center;
        }

        .container-actions-compact {
            padding: 0.5rem 1rem;
            text-align: center;
        }

        .header-compact h1 {
            font-size: 1.3rem;
        }

        }

        /* Versión ultra compacta */
        .header-ultra-compact {
            background: #196b20;
            color: white;
            padding: 0.75rem 1.5rem;
            margin-bottom: 0.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.75rem;
            box-shadow: 0 1px 3px rgba(25, 107, 32, 0.3);
        }

            .header-ultra-compact h1 {
                font-size: 1.25rem;
                font-weight: 600;
                margin: 0;
            }

            .header-ultra-compact .subtitle-inline {
                font-size: 0.8rem;
                opacity: 0.8;
                margin-left: 1rem;
                font-weight: 300;
            }

        .btn-mini {
            padding: 0.4rem 0.8rem;
            font-size: 0.8rem;
            border-radius: 4px;
            border: none;
            font-weight: 500;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

        .btn-pdf-mini {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

            .btn-pdf-mini:hover {
                background: rgba(255, 255, 255, 0.3);
                color: white;
            }

        .btn-nueva-mini {
            background: #22842a;
            color: white;
            margin-left: 0.5rem;
        }

            .btn-nueva-mini:hover {
                background: #1e7e2a;
                color: white;
            }
    
    </style>
</head>
<body>
    <header class="bg-primary text-white text-center py-3 mb-4">
        <h1>Pensum de Materias</h1>
        <h3>@Model.Pensum.Carrera.NombreCarrera</h3>
        <h3>@Model.Pensum.NombrePensum</h3>
        <a href="~/descargas/pensum/pensumpdf.pdf" target="_blank" class="btn btn-info">PDF <i class="bi bi-filetype-pdf"></i></a>
    </header>
    <div class="container-fluid mt-4">
        <a asp-page="./Create" asp-route-id="@Model.idPensum" class="btn btn-primary btn-custom">
            <i class="bi bi-plus-circle btn-icon"></i>
            Nueva Materia
        </a>
    </div>

    <!-- Pestañas de navegación -->
    <ul class="nav nav-tabs mt-4" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pensum-tab" data-bs-toggle="tab" data-bs-target="#pensum" type="button" role="tab" aria-controls="pensum" aria-selected="true">
                <i class="bi bi-grid-3x3"></i> Vista Pensum
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tabla-tab" data-bs-toggle="tab" data-bs-target="#tabla" type="button" role="tab" aria-controls="tabla" aria-selected="false">
                <i class="bi bi-table"></i> Vista Tabla
            </button>
        </li>
    </ul>

    <!-- Contenido de las pestañas -->
    <div class="tab-content" id="myTabContent">
        <!-- Vista Pensum -->
        <div class="tab-pane fade show active" id="pensum" role="tabpanel" aria-labelledby="pensum-tab">
            <div class="row mt-3">
                @for (int ciclo = 1; ciclo <= 10; ciclo++)
                {
                    <div class="col-md-2 col-sm-6 ciclo-columna" style="background-color: rgb(255, 255, 255);">
                        <h6 class="ciclo-titulo text-center">@(ciclo == 1 ? "I" : ciclo == 2 ? "II" : ciclo == 3 ? "III" : ciclo == 4 ? "IV" : ciclo == 5 ? "V" : ciclo == 6 ? "VI" : ciclo == 7 ? "VII" : ciclo == 8 ? "VIII" : ciclo == 9 ? "IX" : "X")</h6>
                        @foreach (var materia in Model.Materia.Where(m => m.Ciclo == ciclo))
                        {
                            <div class="small-container border">
                                <div class="row border-bottom">
                                    <div class="col-6 border-end text-center">
                                        <p class="mb-0 materia-codigo">@materia.Correlativo</p>
                                    </div>
                                    <div class="col-6 text-center">
                                        <p class="mb-0 materia-codigo">@materia.CodigoMateria</p>
                                    </div>
                                </div>
                                <div class="row border-bottom">
                                    <div class="col text-center">
                                        <p class="materia-nombre">@materia.NombreMateria</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 border-end text-center">
                                        <p class="mb-0 materia-uv">
                                            @{
                                                var prerrequisitos = Model.MateriasPrerrequisitos.ContainsKey(materia.MateriaId)
                                                ? Model.MateriasPrerrequisitos[materia.MateriaId]
                                                : new List<dynamic>();
                                            }
                                            @(prerrequisitos.Any() ? prerrequisitos.First().CodigoMateria : "-")
                                        </p>
                                    </div>
                                    <div class="col-6 text-center">
                                        <p class="mb-0 materia-uv">@materia.uv UV</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Vista Tabla -->
        <div class="tab-pane fade" id="tabla" role="tabpanel" aria-labelledby="tabla-tab">
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Materia[0].NombreMateria)</th>
                                <th>@Html.DisplayNameFor(model => model.Materia[0].CodigoMateria)</th>
                                <th>@Html.DisplayNameFor(model => model.Materia[0].Ciclo)</th>
                                <th>@Html.DisplayNameFor(model => model.Materia[0].Correlativo)</th>
                                <th>@Html.DisplayNameFor(model => model.Materia[0].uv)</th>
                                <th>Prerrequisito</th>
                                <th>@Html.DisplayNameFor(model => model.Materia[0].Pensum)</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Materia)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.NombreMateria)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CodigoMateria)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ciclo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Correlativo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.uv)</td>
                                    <td>
                                        @{
                                            var prerrequisitos = Model.MateriasPrerrequisitos.ContainsKey(item.MateriaId)
                                            ? Model.MateriasPrerrequisitos[item.MateriaId]
                                            : new List<dynamic>();
                                        }
                                        @(prerrequisitos.Any() ? prerrequisitos.First().NombreMateria : "-")
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Pensum!.CodigoPensum)</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                Acciones
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-page="./Create">Nuevo <i class="bi bi-plus-circle"></i></a></li>
                                                <li><a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.MateriaId">Editar <i class="bi bi-pencil-square"></i></a></li>
                                                <li><a class="dropdown-item" asp-page="./Details" asp-route-id="@item.MateriaId">Detalles <i class="bi bi-info-circle"></i></a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

