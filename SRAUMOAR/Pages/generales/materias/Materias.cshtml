@page
@model SRAUMOAR.Pages.generales.materias.MateriasModel

@{
    ViewData["Title"] = "Materias";
}

<div class="gm-shell">
    <div class="gm-hero">
        <div>
            <p class="gm-eyebrow">Pensum Académico</p>
            <h1 class="gm-title">@Model.Pensum.NombrePensum</h1>
            <p class="gm-subtitle">@Model.Pensum.Carrera?.NombreCarrera</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-light btn-sm" asp-page="/generales/pensum/Index" asp-route-id="@Model.Pensum.CarreraId">
                <i class="bi bi-arrow-left me-1"></i> Volver a pensums
            </a>
            <a class="btn btn-success btn-sm" asp-page="./Create" asp-route-id="@Model.idPensum">
                <i class="bi bi-plus-circle me-1"></i> Nueva materia
            </a>
        </div>
    </div>

    <div class="gm-panel mb-3">
        <ul class="nav nav-tabs" id="materiasTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="tab-pensum" data-bs-toggle="tab" data-bs-target="#pane-pensum" type="button" role="tab">
                    <i class="bi bi-grid-3x3-gap me-1"></i> Vista pensum
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab-tabla" data-bs-toggle="tab" data-bs-target="#pane-tabla" type="button" role="tab">
                    <i class="bi bi-table me-1"></i> Vista tabla
                </button>
            </li>
        </ul>

        <div class="tab-content pt-3" id="materiasTabContent">
            <div class="tab-pane fade show active" id="pane-pensum" role="tabpanel" aria-labelledby="tab-pensum">
                <div class="row g-3">
                    @for (int ciclo = 1; ciclo <= 10; ciclo++)
                    {
                        var materiasCiclo = Model.Materia.Where(m => m.Ciclo == ciclo).OrderBy(m => m.Correlativo).ToList();
                        var totalUv = materiasCiclo.Sum(m => m.uv);
                        <div class="col-12 col-sm-6 col-xl-4">
                            <div class="gm-cycle-card h-100">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">Ciclo @(ciclo == 1 ? "I" : ciclo == 2 ? "II" : ciclo == 3 ? "III" : ciclo == 4 ? "IV" : ciclo == 5 ? "V" : ciclo == 6 ? "VI" : ciclo == 7 ? "VII" : ciclo == 8 ? "VIII" : ciclo == 9 ? "IX" : "X")</h6>
                                    <span class="gm-chip">@materiasCiclo.Count materia(s)</span>
                                </div>

                                @if (materiasCiclo.Any())
                                {
                                    <div class="d-flex flex-column gap-2">
                                        @foreach (var materia in materiasCiclo)
                                        {
                                            var prerrequisitos = Model.MateriasPrerrequisitos.ContainsKey(materia.MateriaId)
                                                ? Model.MateriasPrerrequisitos[materia.MateriaId]
                                                : new List<dynamic>();

                                            <div class="gm-materia-item">
                                                <div class="d-flex justify-content-between align-items-start gap-2">
                                                    <div>
                                                        <div class="fw-semibold">@materia.CodigoMateria - @materia.NombreMateria</div>
                                                        <small class="text-muted">Correlativo: @materia.Correlativo</small>
                                                    </div>
                                                    <span class="gm-chip">@materia.uv UV</span>
                                                </div>
                                                <small class="text-muted">
                                                    Prerrequisito: @(prerrequisitos.Any() ? prerrequisitos.First().CodigoMateria : "-")
                                                </small>
                                            </div>
                                        }
                                    </div>
                                    <div class="mt-2 pt-2 border-top text-end">
                                        <small class="text-muted">UV del ciclo:</small>
                                        <strong>@totalUv</strong>
                                    </div>
                                }
                                else
                                {
                                    <div class="gm-empty py-3 mb-0">
                                        <i class="bi bi-dot"></i>
                                        <p>Sin materias</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="tab-pane fade" id="pane-tabla" role="tabpanel" aria-labelledby="tab-tabla">
                @if (Model.Materia.Any())
                {
                    <div class="table-responsive">
                        <table class="table align-middle mb-0 gm-table">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Materia[0].NombreMateria)</th>
                                    <th>@Html.DisplayNameFor(model => model.Materia[0].CodigoMateria)</th>
                                    <th>@Html.DisplayNameFor(model => model.Materia[0].Ciclo)</th>
                                    <th>@Html.DisplayNameFor(model => model.Materia[0].Correlativo)</th>
                                    <th>@Html.DisplayNameFor(model => model.Materia[0].uv)</th>
                                    <th>Prerrequisitos</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Materia.OrderBy(m => m.Ciclo).ThenBy(m => m.Correlativo))
                                {
                                    var prerrequisitos = Model.MateriasPrerrequisitos.ContainsKey(item.MateriaId)
                                        ? Model.MateriasPrerrequisitos[item.MateriaId]
                                        : new List<dynamic>();
                                    <tr>
                                        <td class="fw-semibold">@item.NombreMateria</td>
                                        <td><span class="gm-chip">@item.CodigoMateria</span></td>
                                        <td>@item.Ciclo</td>
                                        <td>@item.Correlativo</td>
                                        <td>@item.uv</td>
                                        <td>
                                            @if (prerrequisitos.Any())
                                            {
                                                foreach (var pre in prerrequisitos)
                                                {
                                                    <span class="badge text-bg-light border me-1">@pre.CodigoMateria</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a class="btn btn-outline-success btn-sm" asp-page="./Edit" asp-route-id="@item.MateriaId">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a class="btn btn-outline-primary btn-sm" asp-page="./Details" asp-route-id="@item.MateriaId">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a class="btn btn-outline-danger btn-sm" asp-page="./Delete" asp-route-id="@item.MateriaId">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="gm-empty">
                        <i class="bi bi-journal-x"></i>
                        <p>No hay materias registradas para este pensum.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>