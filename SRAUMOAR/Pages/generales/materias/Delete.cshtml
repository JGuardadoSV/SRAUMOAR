@page
@model SRAUMOAR.Pages.generales.materias.DeleteModel

@{
    ViewData["Title"] = "Eliminar Materia";
}

<div class="gm-shell">
    <div class="gm-hero gm-hero-danger">
        <div>
            <p class="gm-eyebrow">Acción Crítica</p>
            <h1 class="gm-title">Eliminar Materia</h1>
            <p class="gm-subtitle">Esta acción no se puede deshacer.</p>
        </div>
    </div>

    <div class="gm-panel">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-1"></i>
            Confirme que desea eliminar el siguiente registro.
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="gm-kv"><span>Nombre</span><strong>@Model.Materia.NombreMateria</strong></div>
            </div>
            <div class="col-md-3">
                <div class="gm-kv"><span>Código</span><strong>@Model.Materia.CodigoMateria</strong></div>
            </div>
            <div class="col-md-3">
                <div class="gm-kv"><span>Pensum</span><strong>@Model.Materia.Pensum?.CodigoPensum</strong></div>
            </div>
        </div>

        <form method="post" class="d-flex justify-content-between">
            <input type="hidden" asp-for="Materia.MateriaId" />
            <a asp-page="./Materias" asp-route-id="@Model.Materia.PensumId" class="btn btn-outline-secondary">
                Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i> Eliminar materia
            </button>
        </form>
    </div>
</div>