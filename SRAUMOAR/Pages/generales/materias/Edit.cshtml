@page
@model SRAUMOAR.Pages.generales.materias.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Materia.MateriaId" />
            <div class="form-group">
                <label asp-for="Materia.NombreMateria" class="control-label"></label>
                <input asp-for="Materia.NombreMateria" class="form-control" />
                <span asp-validation-for="Materia.NombreMateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materia.CodigoMateria" class="control-label"></label>
                <input asp-for="Materia.CodigoMateria" class="form-control" />
                <span asp-validation-for="Materia.CodigoMateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materia.Ciclo" class="control-label"></label>
                <input asp-for="Materia.Ciclo" class="form-control" />
                <span asp-validation-for="Materia.Ciclo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materia.Correlativo" class="control-label"></label>
                <input asp-for="Materia.Correlativo" class="form-control" />
                <span asp-validation-for="Materia.Correlativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materia.PensumId" class="control-label"></label>
                <select asp-for="Materia.PensumId" class="form-control" asp-items="ViewBag.PensumId"></select>
                <span asp-validation-for="Materia.PensumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
