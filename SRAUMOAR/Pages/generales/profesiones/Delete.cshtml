@page
@model SRAUMOAR.Pages.generales.profesiones.DeleteModel

@{
    ViewData["Title"] = "Eliminar Profesión";
}

<div class="container-fluid px-0">
    <div class="row justify-content-center mt-4">
        <div class="col-md-8 col-lg-6">
            <div class="alert alert-danger border-0 shadow-sm rounded-4 mb-4 d-flex align-items-center p-4">
                <i class="bi bi-exclamation-triangle-fill fs-1 text-danger me-4"></i>
                <div>
                    <h4 class="alert-heading fw-bold mb-1">¿Está seguro de eliminar esta profesión?</h4>
                    <p class="mb-0">Esta acción no se puede deshacer y puede afectar a registros vinculados a esta profesión.</p>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5">
                    <h5 class="text-danger mb-4 border-bottom border-danger pb-2 fw-semibold">Información del Registro</h5>
                    
                    <dl class="row g-3 mb-0">
                        <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Profesion.ProfesionId)</dt>
                        <dd class="col-sm-8 mb-3 fs-5">@Html.DisplayFor(model => model.Profesion.ProfesionId)</dd>

                        <dt class="col-sm-4 text-muted fw-bold">@Html.DisplayNameFor(model => model.Profesion.NombreProfesion)</dt>
                        <dd class="col-sm-8 mb-3 fs-5">@Html.DisplayFor(model => model.Profesion.NombreProfesion)</dd>
                    </dl>
                </div>
                
                <div class="card-footer bg-light border-0 p-4">
                    <form method="post" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Profesion.ProfesionId" />
                        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger rounded-pill px-5 shadow-sm">
                            <i class="bi bi-trash me-1"></i> Confirmar Eliminación
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
