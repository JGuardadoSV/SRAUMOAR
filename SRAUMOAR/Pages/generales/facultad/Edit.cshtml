@page
@model SRAUMOAR.Pages.generales.facultad.EditModel

@{
    ViewData["Title"] = "Editar Facultad";
}

<div class="container-fluid px-0">
    <div class="row justify-content-center mt-4">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white border-bottom p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="bi bi-pencil-square text-primary fs-3"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold text-primary">Editar Facultad</h3>
                            <p class="text-muted mb-0 small">Modifique la información de la facultad</p>
                        </div>
                    </div>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                        <input type="hidden" asp-for="Facultad.FacultadId" />
                        
                        <div class="form-floating mb-4">
                            <input asp-for="Facultad.NombreFacultad" class="form-control rounded-3" placeholder="Nombre" />
                            <label asp-for="Facultad.NombreFacultad" class="text-muted"><i class="bi bi-fonts me-1"></i> Nombre de la Facultad</label>
                            <span asp-validation-for="Facultad.NombreFacultad" class="text-danger small mt-1 d-block"></span>
                        </div>
                        
                        <div class="form-floating mb-4">
                            <input asp-for="Facultad.CodigoFacultad" class="form-control rounded-3" placeholder="Código" />
                            <label asp-for="Facultad.CodigoFacultad" class="text-muted"><i class="bi bi-upc-scan me-1"></i> Código de Facultad</label>
                            <span asp-validation-for="Facultad.CodigoFacultad" class="text-danger small mt-1 d-block"></span>
                        </div>
                        
                        <div class="mb-4">
                            <div class="form-check form-switch fs-5">
                                <input class="form-check-input" type="checkbox" role="switch" asp-for="Facultad.Activa" />
                                <label class="form-check-label text-muted" asp-for="Facultad.Activa">
                                    Estado: <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 ms-1">Activa</span>
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5">
                            <a asp-page="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
