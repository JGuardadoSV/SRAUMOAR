@page
@model SRAUMOAR.Pages.generales.facultad.DetailsModel

@{
    ViewData["Title"] = "Detalles de Facultad";
}

<div class="container-fluid px-0">
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="bg-primary bg-gradient p-4 text-white text-center position-relative">
                    <div class="position-absolute top-0 end-0 p-3">
                        @if (Model.Facultad.Activa)
                        {
                            <span class="badge bg-success bg-opacity-25 text-white border border-light border-opacity-25 px-3 py-2 rounded-pill shadow-sm">
                                <i class="bi bi-check-circle me-1"></i> Activa
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger bg-opacity-25 text-white border border-light border-opacity-25 px-3 py-2 rounded-pill shadow-sm">
                                <i class="bi bi-x-circle me-1"></i> Inactiva
                            </span>
                        }
                    </div>
                    <div class="display-4 mb-2"><i class="bi bi-bank"></i></div>
                    <h2 class="mb-0 fw-bold">@Model.Facultad.NombreFacultad</h2>
                    <p class="mb-0 text-white-50 fs-5 mt-2">Código: @Model.Facultad.CodigoFacultad</p>
                </div>
                
                <div class="card-body p-5">
                    <h5 class="text-primary mb-4 border-bottom pb-2 fw-semibold">Información General</h5>
                    
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="bg-light p-3 rounded-circle me-3 text-primary">
                                    <i class="bi bi-hash fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted fw-bold text-uppercase">@Html.DisplayNameFor(model => model.Facultad.FacultadId)</small>
                                    <p class="mb-0 fs-5">@Model.Facultad.FacultadId</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="bg-light p-3 rounded-circle me-3 text-primary">
                                    <i class="bi bi-upc-scan fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted fw-bold text-uppercase">@Html.DisplayNameFor(model => model.Facultad.CodigoFacultad)</small>
                                    <p class="mb-0 fs-5">@Model.Facultad.CodigoFacultad</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-5 pt-3 border-top">
                        <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="bi bi-arrow-left me-2"></i> Volver a la lista
                        </a>
                        <a asp-page="./Edit" asp-route-id="@Model.Facultad?.FacultadId" class="btn btn-primary rounded-pill px-4 shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i> Editar Facultad
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
