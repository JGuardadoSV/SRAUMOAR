@page
@model SRAUMOAR.Pages.generales.facultad.IndexModel

@{
    ViewData["Title"] = "Facultades";
}

<div class="row mb-4 align-items-center">
    <div class="col-8">
        <h2 class="mt-2 text-primary"><i class="bi bi-bank"></i> Gestión de Facultades</h2>
    </div>
    <div class="col-4 text-end">
        <a asp-page="Create" class="btn btn-primary rounded-pill shadow-sm">
            <i class="bi bi-plus-lg"></i> Nueva Facultad
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="rounded-start">@Html.DisplayNameFor(model => model.Facultad[0].NombreFacultad)</th>
                        <th>Código</th>
                        <th>@Html.DisplayNameFor(model => model.Facultad[0].Activa)</th>
                        <th class="text-center rounded-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Facultad) {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                        <i class="bi bi-bank text-primary fs-5"></i>
                                    </div>
                                    <span class="fw-semibold">@Html.DisplayFor(modelItem => item.NombreFacultad)</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.CodigoFacultad)</span>
                            </td>
                            <td>
                                @if (item.Activa)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-2 py-1">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-2 py-1">Inactiva</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm">
                                    <a asp-page="./Edit" asp-route-id="@item.FacultadId" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-page="./Details" asp-route-id="@item.FacultadId" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.FacultadId" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Facultad.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <p class="mb-0">No hay facultades registradas en el sistema.</p>
                </div>
            }
        </div>
    </div>
</div>
