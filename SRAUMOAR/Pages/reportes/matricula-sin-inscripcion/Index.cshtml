@page
@model SRAUMOAR.Pages.reportes.matricula_sin_inscripcion.IndexModel
@{
    ViewData["Title"] = "Reporte de Alumnos con Matrícula Sin Inscripción";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Reporte de Alumnos con Matrícula Sin Inscripción</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="#">Reportes</a></li>
                    <li class="breadcrumb-item active">Matrícula Sin Inscripción</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Generar Reporte de Alumnos con Matrícula Sin Inscripción</h3>
                    </div>
                    <div class="card-body">
                        <form method="get">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="SelectedCarreraId">Carrera</label>
                                        <select asp-for="SelectedCarreraId" asp-items="@(ViewData["Carreras"] as SelectList)" class="form-control">
                                            <option value="">Todas las carreras</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label asp-for="IncluirAlumnosConBeca">Incluir Alumnos con Beca</label>
                                        <div class="form-check">
                                            <input asp-for="IncluirAlumnosConBeca" class="form-check-input" type="checkbox" />
                                            <label class="form-check-label" asp-for="IncluirAlumnosConBeca">
                                                Mostrar también alumnos con beca
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <div>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-search"></i> Filtrar
                                            </button>
                                            <a href="@Url.Page("")" class="btn btn-secondary">
                                                <i class="fas fa-times"></i> Limpiar
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <!-- Botones de exportación siempre visibles -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Exportar Reporte</h3>
                                        <div class="card-tools">
                                            <a href="@Url.Page("", "GenerarPDF", new { carreraId = Model.SelectedCarreraId, incluirAlumnosConBeca = Model.IncluirAlumnosConBeca })" 
                                               class="btn btn-danger btn-sm me-2">
                                                <i class="fas fa-file-pdf"></i> PDF
                                            </a>
                                            <a href="@Url.Page("", "GenerarExcel", new { carreraId = Model.SelectedCarreraId, incluirAlumnosConBeca = Model.IncluirAlumnosConBeca })" 
                                               class="btn btn-success btn-sm">
                                                <i class="fas fa-file-excel"></i> Excel
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.AlumnosConMatriculaSinInscripcion != null && Model.AlumnosConMatriculaSinInscripcion.Any())
                        {
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="alert alert-info">
                                        <h5><i class="icon fas fa-info"></i> Resumen del Reporte</h5>
                                        <p>
                                            <strong>Total de alumnos con matrícula sin inscripción:</strong> @Model.TotalAlumnos<br>
                                            @* <strong>Total de matrículas pagadas:</strong> $@Model.TotalMatricula.ToString("F2") *@
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h3 class="card-title">Alumnos con Matrícula Sin Inscripción</h3>
                                        </div>
                                        <div class="card-body table-responsive p-0">
                                            <table class="table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th>No.</th>
                                                        <th>Nombre Completo</th>
                                                        <th>Carrera</th>
                                                        <th>Carnet</th>
                                                        @* <th>Email</th> *@
                                                        <th>Fecha Pago Matrícula</th>
                                                       @*  <th class="text-right">Monto Matrícula</th>
                                                        <th>Código Generación</th> *@
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int contador = 1;
                                                    }
                                                    @foreach (var alumno in Model.AlumnosConMatriculaSinInscripcion)
                                                    {
                                                        <tr>
                                                            <td>@contador</td>
                                                            <td>@alumno.Apellidos, @alumno.Nombres</td>
                                                            <td>@alumno.Carrera</td>
                                                            <td>@(alumno.Carnet ?? alumno.Email?.Split('@')[0] ?? "")</td>
                                                            @* <td>@alumno.Email</td> *@
                                                            <td>@alumno.FechaPagoMatricula.ToString("dd/MM/yyyy")</td>
                                                           @*  <td class="text-right">$@alumno.MontoMatricula.ToString("F2")</td>
                                                            <td>@alumno.CodigoGeneracion</td> *@
                                                        </tr>
                                                        contador++;
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (Model.AlumnosConMatriculaSinInscripcion != null)
                        {
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="alert alert-warning">
                                        <h5><i class="icon fas fa-exclamation-triangle"></i> No se encontraron alumnos con matrícula sin inscripción</h5>
                                        <p>No hay alumnos que cumplan con los criterios especificados.</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        jQuery(document).ready(function () {
            // Auto-submit form when filters change
            jQuery('#SelectedCarreraId').change(function () {
                if (jQuery('#SelectedCarreraId').val() !== '') {
                    jQuery('form').submit();
                }
            });
        });
    </script>
}
