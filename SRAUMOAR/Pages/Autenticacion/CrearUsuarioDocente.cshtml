@page "/autenticacion/crearusuariodocente/{DocenteId:int}"
@model SRAUMOAR.Pages.Autenticacion.CrearUsuarioDocenteModel
@{
    ViewData["Title"] = "Crear Usuario Docente";
}

<style>
    :root {
        --primary-color: #198754;
        --primary-dark: #146c43;
        --primary-light: #20c997;
        --secondary-color: #6c757d;
        --danger-color: #dc3545;
        --danger-dark: #b02a37;
        --background-light: #f8f9fa;
        --shadow-color: rgba(25, 135, 84, 0.1);
        --shadow-danger: rgba(220, 53, 69, 0.15);
        --border-radius: 12px;
    }

    .page-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .form-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: 0 10px 30px var(--shadow-color);
        border: 1px solid rgba(25, 135, 84, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .form-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px var(--shadow-color);
        }

    .card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .card-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
            transform: rotate(45deg);
            animation: shine 3s infinite;
        }

    @@keyframes shine {
        0% {
            transform: translateX(-100%) translateY(-100%) rotate(45deg);
        }

        50% {
            transform: translateX(100%) translateY(100%) rotate(45deg);
        }

        100% {
            transform: translateX(-100%) translateY(-100%) rotate(45deg);
        }
    }

    .card-header h1 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 600;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }

    .card-header h4 {
        margin: 0.5rem 0 0 0;
        opacity: 0.9;
        font-weight: 400;
        font-size: 1.1rem;
    }

    .card-body {
        padding: 2.5rem;
    }

    .form-floating {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .form-floating > .form-control,
        .form-floating > .form-select {
            height: calc(3.5rem + 2px);
            padding: 1rem 0.75rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            transition: all 0.3s ease;
            background-color: #fff;
        }

            .form-floating > .form-control:focus,
            .form-floating > .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
                transform: translateY(-2px);
            }

        .form-floating > label {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            padding: 1rem 0.75rem;
            pointer-events: none;
            border: 1px solid transparent;
            transform-origin: 0 0;
            transition: opacity 0.1s ease-in-out, transform 0.1s ease-in-out;
            color: #6c757d;
            font-weight: 500;
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select ~ label {
            opacity: 0.65;
            transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
            color: var(--primary-color);
        }

    .form-control[readonly] {
        background-color: var(--background-light);
        border-style: dashed;
        border-color: #ced4da;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        border: none;
        border-radius: 8px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        color: white;
        width: 100%;
        margin-bottom: 1rem;
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(25, 135, 84, 0.3);
            color: white;
        }

        .btn-primary-custom:active {
            transform: translateY(0);
        }

    .btn-danger-custom {
        background: linear-gradient(135deg, var(--danger-color) 0%, var(--danger-dark) 100%);
        border: none;
        border-radius: 8px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        transition: all 0.3s ease;
        width: 100%;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .btn-danger-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px var(--shadow-danger);
            color: white;
            text-decoration: none;
        }

        .btn-danger-custom:active {
            transform: translateY(0);
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .validation-summary {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #721c24;
    }

    .icon-teacher {
        width: 24px;
        height: 24px;
        margin-right: 8px;
        vertical-align: middle;
    }

    .actions-section {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e9ecef;
    }

    /* Animación de entrada */
    .form-card {
        animation: slideInUp 0.6s ease-out;
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Efecto de pulso para el botón de crear */
    .btn-primary-custom::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }

    .btn-primary-custom:hover::before {
        left: 100%;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-container {
            padding: 1rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-header h1 {
            font-size: 1.5rem;
        }

        .card-header h4 {
            font-size: 1rem;
        }
    }

    /* Mejoras específicas para el formulario de docente */
    .docente-badge {
        background: linear-gradient(135deg, #ffc107 0%, #ff8c00 100%);
        color: #212529;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
        margin-left: 0.5rem;
        display: inline-block;
        text-shadow: none;
    }

    .form-footer {
        background: #f8f9fa;
        margin: 0 -2.5rem -2.5rem -2.5rem;
        padding: 2rem 2.5rem;
        border-top: 1px solid #e9ecef;
    }

    @@media (max-width: 768px) {
        .form-footer {
            margin: 0 -1.5rem -1.5rem -1.5rem;
            padding: 1.5rem;
        }
    }
</style>

<div class="page-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-9">
                <div class="form-card">
                    <div class="card-header">
                        <svg class="icon-teacher" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                            <path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82z" />
                        </svg>
                        <h1>Creación de Usuario</h1>
                        <h4>Docente: @Model.nombre <span class="docente-badge">DOCENTE</span></h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                            <div class="form-floating">
                                <input asp-for="Usuario.NombreUsuario" class="form-control" readonly value="@Model.email" placeholder="Nombre de usuario" />
                                <label asp-for="Usuario.NombreUsuario">Nombre de usuario</label>
                                <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
                            </div>

                            <div class="form-floating">
                                <input asp-for="Usuario.Clave" type="password" class="form-control" minlength="6" placeholder="Contraseña" />
                                <label asp-for="Usuario.Clave">Contraseña</label>
                                <span asp-validation-for="Usuario.Clave" class="text-danger"></span>
                            </div>

                            <div class="form-floating">
                                <input asp-for="Usuario.Email" type="email" class="form-control" readonly value="@Model.email" placeholder="Email" />
                                <label asp-for="Usuario.Email">Correo electrónico</label>
                                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating">
                                <select asp-for="Usuario.NivelAccesoId" class="form-select" asp-items="ViewBag.NivelAccesoId">
                                    <option value="">Seleccionar nivel...</option>
                                </select>
                                <label asp-for="Usuario.NivelAccesoId">Nivel de acceso</label>
                            </div>

                            <div class="actions-section">
                                <button type="submit" class="btn btn-primary-custom">
                                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 8px;">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                                    </svg>
                                    Crear Usuario
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="form-footer">
                        <a asp-page="/generales/docentes/Index" class="btn btn-danger-custom">
                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 8px;">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                            </svg>
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}