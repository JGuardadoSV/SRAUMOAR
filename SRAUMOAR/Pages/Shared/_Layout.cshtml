        .search-container {
            position: relative;
            margin: 0;
        }

        .search-input-group {
            background: #f8f9fa;
            border-radius: 8px;
            box-shadow: none;
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
        }

        .search-input {
            border: none;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            width: 100%;
            background: transparent;
            height: 38px;
        }

        .search-input:focus {
            outline: none;
        }

        .search-icon {
            color: #6c757d;
            padding: 0 1rem;
            font-size: 1.1rem;
        }

        /* Estilos para los resultados del autocompletado */
        .ui-autocomplete {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.18);
