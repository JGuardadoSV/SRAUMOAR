            overflow-y: auto;
            padding: 0.25rem 0;
            width: 100% !important;
            border: 1px solid #e9ecef;
            max-width: 420px;
            min-width: 260px;
            left: 50% !important;
            transform: translateX(-50%) !important;
            top: 48px !important;
            z-index: 2000;
        }

        .ui-autocomplete .ui-menu-item {
            border: none;
            margin: 0;
            padding: 0;
        }

        .student-item {
            display: flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 0;
            width: 100%;
            border: none;
            background: transparent;
            transition: background 0.2s, box-shadow 0.2s;
            border-bottom: 1px solid #f1f1f1;
            min-height: 48px;
        }

        .student-item:last-child {
            border-bottom: none;
        }

        .student-item:hover, .ui-state-active .student-item {
            background: #e9f5ff;
            box-shadow: 0 2px 8px rgba(13,110,253,0.06);
