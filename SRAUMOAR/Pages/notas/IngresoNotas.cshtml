@page
@model SRAUMOAR.Pages.notas.IngresoNotasModel
@{
}
<style>
    body {
        background-color: #f4f6f9;
    }
    .card-header {
        background-color: #28a745;
        color: white;
    }
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(40, 167, 69, 0.05);
    }
    .table-hover tbody tr:hover {
        background-color: rgba(40, 167, 69, 0.1);
    }
    .btn-enviar-notas {
        width: 100%;
        margin-top: 15px;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header text-center">
            <h3>Registro de Notas</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <strong>Docente:</strong>
                    <span id="nombreDocente">Juan Pérez</span>
                </div>
                <div class="col-md-4">
                    <strong>Materia:</strong>
                    <span id="nombreMateria">Matemáticas</span>
                </div>
                <div class="col-md-4">
                    <strong>Actividad:</strong>
                    <span id="nombreActividad">Examen Parcial</span>
                </div>
            </div>

            <form id="notasForm">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-success">
                            <tr>
                                <th>#</th>
                                <th>Nombre del Alumno</th>
                                <th>Nota</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>María González</td>
                                <td>
                                    <input type="number"
                                           name="nota_maria"
                                           class="form-control"
                                           min="0"
                                           max="10"
                                           step="0.1"
                                           placeholder="Nota">
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Carlos Rodríguez</td>
                                <td>
                                    <input type="number"
                                           name="nota_carlos"
                                           class="form-control"
                                           min="0"
                                           max="10"
                                           step="0.1"
                                           placeholder="Nota">
                                </td>
                            </tr>
                            <!-- Puedes agregar más filas aquí -->
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-12">
                        <button type="submit"
                                class="btn btn-success btn-enviar-notas">
                            Registrar Todas las Notas
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
