@page
@model SRAUMOAR.Pages.grupos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle del Grupo</h1>

<div>
    <h4>Grupo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grupo.Limite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.Limite)
        </dd>
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grupo.Activo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.Activo)
        </dd>
        <dt class="col-sm-2">
            Carrera
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.Carrera.NombreCarrera)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grupo.Ciclo)
        </dt>
        <dd class="col-sm-10">
            @Model.Grupo.Ciclo.NCiclo-@Model.Grupo.Ciclo.anio
        </dd>
        <dt class="col-sm-2">
            Docente encargado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grupo.Docente.Apellidos)
        </dd>
    </dl>
</div>
<script>
    function abrirPdfEnPopup(url) {
        const ancho = Math.min(window.innerWidth * 0.9, 1000);
        const alto = Math.min(window.innerHeight * 0.9, 800);
        const left = (window.innerWidth - ancho) / 2;
        const top = (window.innerHeight - alto) / 2;
        window.open(url, 'VistaPreviaPDF', `width=${ancho},height=${alto},left=${left},top=${top},resizable=yes,scrollbars=yes`);
    }
</script>
<div>
    <h4>Notas por Materia</h4>
    <hr />
    @if (Model.MateriasDelGrupo != null && Model.MateriasDelGrupo.Any() && Model.EstudiantesConNotas.Any())
    {
        @foreach (var materia in Model.MateriasDelGrupo)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <strong>@materia.NombreMateria</strong>
                    <small class="text-muted">(@materia.CodigoMateria)</small>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 30%">Estudiante (Apellidos Nombres)</th>
                                    <th class="text-center">LAB1</th>
                                    <th class="text-center">PAR1</th>
                                    <th class="text-center">LAB2</th>
                                    <th class="text-center">PAR2</th>
                                    <th class="text-center">LAB3</th>
                                    <th class="text-center">PAR3</th>
                                    <th class="text-center">Nota final</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var estudiante in Model.EstudiantesConNotas)
                                {
                                    var materiaInscrita = estudiante.MateriasInscritas.FirstOrDefault(mi => mi.MateriasGrupoId == materia.MateriasGrupoId);
                                    if (materiaInscrita == null)
                                    {
                                        continue;
                                    }

                                    var notasMateria = estudiante.Notas.Where(n => n.MateriasInscritas.MateriasGrupoId == materia.MateriasGrupoId).ToList();
                                    var labsList = notasMateria.Where(n => n.ActividadAcademica != null && n.ActividadAcademica.TipoActividad == 1)
                                        .OrderBy(n => n.ActividadAcademica!.FechaInicio)
                                        .Select(n => (decimal?)n.Nota)
                                        .Take(3)
                                        .ToList();
                                    var parsList = notasMateria.Where(n => n.ActividadAcademica != null && n.ActividadAcademica.TipoActividad == 2)
                                        .OrderBy(n => n.ActividadAcademica!.FechaInicio)
                                        .Select(n => (decimal?)n.Nota)
                                        .Take(3)
                                        .ToList();
                                    while (labsList.Count < 3) { labsList.Add(null); }
                                    while (parsList.Count < 3) { parsList.Add(null); }

                                    decimal labSum = (labsList[0] ?? 0) + (labsList[1] ?? 0) + (labsList[2] ?? 0);
                                    decimal parSum = (parsList[0] ?? 0) + (parsList[1] ?? 0) + (parsList[2] ?? 0);
                                    decimal labAvg = labSum / 3m;
                                    decimal parAvg = parSum / 3m;
                                    decimal notaFinal = Math.Round(labAvg * 0.30m + parAvg * 0.70m, 2);
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="abrirPdfEnPopup('/reportes/notas/reporteNotasParciales?alumnoId=@estudiante.AlumnoId')">Previsualizar</button>
                                                <span>@estudiante.NombreCompleto</span>
                                            </div>
                                        </td>
                                        <td class="text-center">@((labsList[0].HasValue ? labsList[0]!.Value.ToString("0.00") : "-"))</td>
                                        <td class="text-center">@((parsList[0].HasValue ? parsList[0]!.Value.ToString("0.00") : "-"))</td>
                                        <td class="text-center">@((labsList[1].HasValue ? labsList[1]!.Value.ToString("0.00") : "-"))</td>
                                        <td class="text-center">@((parsList[1].HasValue ? parsList[1]!.Value.ToString("0.00") : "-"))</td>
                                        <td class="text-center">@((labsList[2].HasValue ? labsList[2]!.Value.ToString("0.00") : "-"))</td>
                                        <td class="text-center">@((parsList[2].HasValue ? parsList[2]!.Value.ToString("0.00") : "-"))</td>
                                        <td class="text-center">@notaFinal.ToString("0.00")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">No hay notas para mostrar en este grupo.</div>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Grupo.GrupoId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
