@page
@model SRAUMOAR.Pages.entidadesBecas.CreateModel

        @{
        ViewData["Title"] = "Registro de nueva entidad de becas";
        }

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary bg-gradient text-white">
                    <h1 class="h4 mb-0">
                        <i class="bi bi-building-add me-2"></i>
                        Registro de Entidad de Becas
                    </h1>
                </div>
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="EntidadBeca.Nombre" class="form-label">
                                    Nombre <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                                    <input asp-for="EntidadBeca.Nombre" class="form-control" required />
                                </div>
                                <span asp-validation-for="EntidadBeca.Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EntidadBeca.Siglas" class="form-label">
                                    Siglas <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-alphabet"></i></span>
                                    <input asp-for="EntidadBeca.Siglas" class="form-control" required />
                                </div>
                                <span asp-validation-for="EntidadBeca.Siglas" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="EntidadBeca.Direccion" class="form-label">Dirección</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                    <input asp-for="EntidadBeca.Direccion" class="form-control" />
                                </div>
                                <span asp-validation-for="EntidadBeca.Direccion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EntidadBeca.NombreRepresente" class="form-label">
                                    Nombre del Representante <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="EntidadBeca.NombreRepresente" class="form-control" required />
                                </div>
                                <span asp-validation-for="EntidadBeca.NombreRepresente" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EntidadBeca.Telefono" class="form-label">Teléfono</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="EntidadBeca.Telefono" class="form-control" />
                                </div>
                                <span asp-validation-for="EntidadBeca.Telefono" class="text-danger small"></span>
                            </div>

                        

                            <div class="col-md-6">
                                <label asp-for="EntidadBeca.Email" class="form-label">
                                    Email <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="EntidadBeca.Email" type="email" class="form-control" required />
                                </div>
                                <span asp-validation-for="EntidadBeca.Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                Volver al listado
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>
                                Crear registro
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
