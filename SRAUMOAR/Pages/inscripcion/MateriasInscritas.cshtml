@page
@model SRAUMOAR.Pages.inscripcion.MateriasInscritasModel

@{
    ViewData["Title"] = "Resumen de materias inscritas por alumno";
}
<style>
    :root {
        --primary-green: #008f39;
        --light-green: #40bf6a;
        --soft-green: #e6f3e8;
    }

    body {
        background-color: #f4f6f9;
        font-family: 'Arial', sans-serif;
    }

    .container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 30px;
    }

    h1 {
        color: var(--primary-green);
        text-align: center;
        margin-bottom: 25px;
        font-weight: bold;
    }

    h2 {
        color: var(--light-green);
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        border-top: 2px solid var(--primary-green);
    }

        .table thead {
            background-color: var(--soft-green);
            color: var(--primary-green);
        }

            .table thead th {
                font-weight: bold;
                border-bottom: 2px solid var(--primary-green);
            }

        .table tbody tr:hover {
            background-color: rgba(0, 143, 57, 0.05);
        }

        .table td, .table th {
            vertical-align: middle;
            padding: 15px;
        }

    .btn-create {
        background-color: var(--primary-green);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: var(--light-green);
            color: white;
        }

    .table-actions a {
        color: var(--primary-green);
        margin-right: 10px;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .table-actions a:hover {
            color: var(--light-green);
            text-decoration: underline;
        }

    .status-approved {
        color: var(--primary-green);
        font-weight: bold;
    }

    .status-not-approved {
        color: #dc3545;
        font-weight: bold;
    }
</style>
<div class="container">
    <h1>Resumen de Materias Inscritas</h1>
    <h2>Alumno: @Model.Alumno.Nombres @Model.Alumno.Apellidos</h2>
    <!-- Botón simplificado para PDF -->
    
    

    <p>
        @if (Model.PuedeInscribirMaterias)
        {
            <a class="btn-create" asp-page="InscribirMaterias" asp-route-id="@Model.Alumno.AlumnoId">Inscribir materia</a>
        }
        else if (!Model.EstaInscrito)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Atención:</strong> El alumno no está inscrito en el ciclo actual. 
                <a asp-page="/inscripcion/Create" asp-route-id="@Model.Alumno.AlumnoId" class="alert-link">Inscribir al alumno</a>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (!Model.YaPago)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Atención:</strong> El alumno no ha cancelado el arancel correspondiente. 
                <a asp-page="/aranceles/Cobrar" asp-route-id="@Model.Alumno.AlumnoId" class="alert-link">Ir a cobros</a>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (Model.EstaInscrito)
        {
            <button class="btn btn-primary" onclick="abrirPdfEnPopup('/reportes/inscripcion/reporteInscripcion?id=@Model.Alumno.AlumnoId')">
                Imprimir hoja de inscripción
            </button>
            <form method="post" asp-page-handler="Desinscribir" asp-route-id="@Model.Alumno.AlumnoId" style="display:inline;" onsubmit="return confirm('¿Está seguro de desinscribir completamente al alumno del ciclo actual? Esto eliminará todas las materias inscritas.');">
                <button type="submit" class="btn btn-danger">Desinscribir del ciclo</button>
            </form>
        }
    </p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Fecha Inscripción</th>
                @* <th>Nota Promedio</th> *@
               @*  <th>Alumno</th> *@
                <th>Materia</th>
                <th>UV</th>
                <th>Docente</th>
                <th>Aula</th>
                <th>Horario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MateriasInscritas)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FechaInscripcion)</td>
                  @*   <td>@Html.DisplayFor(modelItem => item.NotaPromedio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Alumno.Apellidos)</td> *@
                    <td>@Html.DisplayFor(modelItem => item.MateriasGrupo.Materia.NombreMateria) - @Html.DisplayFor(modelItem => item.MateriasGrupo.Grupo.Nombre)</td>
                    <td>@item.MateriasGrupo.Materia.uv</td>
                    <td>@item.MateriasGrupo.Docente.Nombres @item.MateriasGrupo.Docente.Apellidos</td>

                    <td>@Html.DisplayFor(modelItem => item.MateriasGrupo.Aula)</td>
                    <td>@Html.DisplayFor(m => item.MateriasGrupo.Dia) @item.MateriasGrupo.FormatearHora12Horas(item.MateriasGrupo.HoraInicio) - @item.MateriasGrupo.FormatearHora12Horas(item.MateriasGrupo.HoraInicio)</td>
                    <td>
                        <form method="post" asp-page-handler="Eliminar" asp-route-id="@item.MateriasInscritasId" style="display:inline;" onsubmit="return confirm('¿Está seguro de eliminar esta inscripción?');">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="5">Total Materias Inscritas: @Model.MateriasInscritas.Count | Total UV @Model.MateriasInscritas.Sum(m => m.MateriasGrupo.Materia.uv) </td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    function abrirPdfEnPopup(url) {
        const ancho = Math.min(window.innerWidth * 0.9, 1000);
        const alto = Math.min(window.innerHeight * 0.9, 800);
        const left = (window.innerWidth - ancho) / 2;
        const top = (window.innerHeight - alto) / 2;
        window.open(url, 'VistaPreviaPDF', `width=${ancho},height=${alto},left=${left},top=${top},resizable=yes,scrollbars=yes`);
    }
</script>