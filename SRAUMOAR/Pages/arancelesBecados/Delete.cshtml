@page
@model SRAUMOAR.Pages.arancelesBecados.DeleteModel
@{
    ViewData["Title"] = "Eliminar Arancel para Alumno Becado";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Eliminar Arancel para Alumno Becado</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">Aranceles Becados</a></li>
                    <li class="breadcrumb-item active">Eliminar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Confirmar Eliminación</h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <h5><i class="icon fas fa-exclamation-triangle"></i> ¡Advertencia!</h5>
                            ¿Está seguro que desea eliminar este arancel personalizado? Esta acción no se puede deshacer.
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h5>Información del Alumno</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Nombre:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Becado?.Alumno != null)
                                        {
                                            @($"{Model.ArancelBecado.Becado.Alumno.Nombres} {Model.ArancelBecado.Becado.Alumno.Apellidos}")
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Entidad Beca:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Becado?.EntidadBeca != null)
                                        {
                                            @Model.ArancelBecado.Becado.EntidadBeca.Nombre
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Ciclo:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Becado?.Ciclo != null)
                                        {
                                            @($"Ciclo {Model.ArancelBecado.Becado.Ciclo.NCiclo} - {Model.ArancelBecado.Becado.Ciclo.anio}")
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <h5>Información del Arancel</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Arancel:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Arancel != null)
                                        {
                                            @Model.ArancelBecado.Arancel.Nombre
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Precio Original:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Arancel != null)
                                        {
                                            @Model.ArancelBecado.Arancel.Costo.ToString("C")
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Precio Personalizado:</dt>
                                    <dd class="col-sm-8 text-primary font-weight-bold">
                                        @Model.ArancelBecado.PrecioPersonalizado.ToString("C")
                                    </dd>

                                    <dt class="col-sm-4">Ahorro:</dt>
                                    <dd class="col-sm-8 text-success font-weight-bold">
                                        @Model.ArancelBecado.Ahorro.ToString("C")
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <form method="post">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 