@page
@model SRAUMOAR.Pages.arancelesBecados.IndexModel
@{
    ViewData["Title"] = "Aranceles de Alumnos Becados";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Aranceles de Alumnos Becados</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item active">Aranceles Becados</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Listado de Aranceles Personalizados para Alumnos Becados</h3>
                        <div class="card-tools">
                            <a asp-page="Create" class="btn btn-primary btn-sm">
                                <i class="bi bi-plus-lg me-1" aria-hidden="true"></i> Nuevo Arancel Becado
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="get" class="mb-3">
                            <div class="row g-2 align-items-end">
                                <div class="col-12 col-md-6">
                                    <label asp-for="SearchAlumno" class="form-label">Alumno</label>
                                    <input asp-for="SearchAlumno" class="form-control" placeholder="Buscar por nombre o apellido" />
                                </div>
                                <div class="col-12 col-md-4">
                                    <label asp-for="SelectedCicloId" class="form-label">Ciclo</label>
                                    <select asp-for="SelectedCicloId" asp-items="Model.Ciclos" class="form-select"></select>
                                </div>
                                <div class="col-12 col-md-2 d-grid gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search me-1" aria-hidden="true"></i> Filtrar
                                    </button>
                                    <a asp-page="./Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1" aria-hidden="true"></i> Limpiar
                                    </a>
                                </div>
                            </div>
                        </form>

                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Alumno</th>
                                    <th>Entidad Beca</th>
                                    <th>Ciclo</th>
                                    <th>Arancel</th>
                                    <th>Precio Original</th>
                                    <th>Precio Personalizado</th>
                                    <th>Ahorro</th>
                                    <th>Descuento</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ArancelesBecados)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Becado?.Alumno != null)
                                            {
                                                @($"{item.Becado.Alumno.Nombres} {item.Becado.Alumno.Apellidos}")
                                            }
                                        </td>
                                        <td>
                                            @if (item.Becado?.EntidadBeca != null)
                                            {
                                                @item.Becado.EntidadBeca.Nombre
                                            }
                                        </td>
                                        <td>
                                            @if (item.Becado?.Ciclo != null)
                                            {
                                                @($"Ciclo {item.Becado.Ciclo.NCiclo} - {item.Becado.Ciclo.anio}")
                                            }
                                        </td>
                                        <td>
                                            @if (item.Arancel != null)
                                            {
                                                @item.Arancel.Nombre
                                            }
                                        </td>
                                        <td class="text-right">
                                            @if (item.Arancel != null)
                                            {
                                                @item.Arancel.Costo.ToString("C")
                                            }
                                        </td>
                                        <td class="text-right">
                                            @item.PrecioPersonalizado.ToString("C")
                                        </td>
                                        <td class="text-right text-success">
                                            @item.Ahorro.ToString("C")
                                        </td>
                                        <td class="text-right">
                                            @item.DescuentoAplicado.ToString("F1")%
                                        </td>
                                        <td>
                                            @{
                                                var estadoText = item.Activo ? "Activo" : "Inactivo";
                                                var estadoBadgeClass = item.Activo
                                                    ? "bg-success-subtle text-success-emphasis border border-success-subtle"
                                                    : "bg-danger-subtle text-danger-emphasis border border-danger-subtle";
                                            }
                                            <span class="badge rounded-pill @estadoBadgeClass">@estadoText</span>
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.ArancelBecadoId" class="btn btn-warning btn-sm" title="Editar" aria-label="Editar">
                                                <i class="bi bi-pencil-square" aria-hidden="true"></i>
                                                <span class="visually-hidden">Editar</span>
                                            </a>
                                            <a asp-page="./Details" asp-route-id="@item.ArancelBecadoId" class="btn btn-info btn-sm" title="Ver detalles" aria-label="Ver detalles">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                                <span class="visually-hidden">Ver detalles</span>
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.ArancelBecadoId" class="btn btn-danger btn-sm" title="Eliminar" aria-label="Eliminar">
                                                <i class="bi bi-trash" aria-hidden="true"></i>
                                                <span class="visually-hidden">Eliminar</span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 
