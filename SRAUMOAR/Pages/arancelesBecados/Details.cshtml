@page
@model SRAUMOAR.Pages.arancelesBecados.DetailsModel
@{
    ViewData["Title"] = "Detalles del Arancel para Alumno Becado";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Detalles del Arancel para Alumno Becado</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">Aranceles Becados</a></li>
                    <li class="breadcrumb-item active">Detalles</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Informaci贸n del Arancel Personalizado</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Informaci贸n del Alumno</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Nombre:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Becado?.Alumno != null)
                                        {
                                            @($"{Model.ArancelBecado.Becado.Alumno.Nombres} {Model.ArancelBecado.Becado.Alumno.Apellidos}")
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Entidad Beca:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Becado?.EntidadBeca != null)
                                        {
                                            @Model.ArancelBecado.Becado.EntidadBeca.Nombre
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Ciclo:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Becado?.Ciclo != null)
                                        {
                                            @($"Ciclo {Model.ArancelBecado.Becado.Ciclo.NCiclo} - {Model.ArancelBecado.Becado.Ciclo.anio}")
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Tipo de Beca:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Becado != null)
                                        {
                                            @(Model.ArancelBecado.Becado.TipoBeca == 1 ? "Completa" : "Parcial")
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <h5>Informaci贸n del Arancel</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Arancel:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Arancel != null)
                                        {
                                            @Model.ArancelBecado.Arancel.Nombre
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Precio Original:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.ArancelBecado.Arancel != null)
                                        {
                                            @Model.ArancelBecado.Arancel.Costo.ToString("C")
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Precio Personalizado:</dt>
                                    <dd class="col-sm-8 text-primary font-weight-bold">
                                        @Model.ArancelBecado.PrecioPersonalizado.ToString("C")
                                    </dd>

                                    <dt class="col-sm-4">Ahorro:</dt>
                                    <dd class="col-sm-8 text-success font-weight-bold">
                                        @Model.ArancelBecado.Ahorro.ToString("C")
                                    </dd>

                                    <dt class="col-sm-4">Descuento:</dt>
                                    <dd class="col-sm-8 text-info">
                                        @Model.ArancelBecado.DescuentoAplicado.ToString("F1")%
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <h5>Informaci贸n Adicional</h5>
                                <dl class="row">
                                    <dt class="col-sm-2">Fecha de Registro:</dt>
                                    <dd class="col-sm-4">
                                        @Model.ArancelBecado.FechaRegistro.ToString("dd/MM/yyyy HH:mm")
                                    </dd>

                                    <dt class="col-sm-2">Estado:</dt>
                                    <dd class="col-sm-4">
                                        @if (Model.ArancelBecado.Activo)
                                        {
                                            <span class="badge badge-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Inactivo</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-2">Observaciones:</dt>
                                    <dd class="col-sm-10">
                                        @if (!string.IsNullOrEmpty(Model.ArancelBecado.Observaciones))
                                        {
                                            @Model.ArancelBecado.Observaciones
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin observaciones</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-page="./Edit" asp-route-id="@Model.ArancelBecado.ArancelBecadoId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 