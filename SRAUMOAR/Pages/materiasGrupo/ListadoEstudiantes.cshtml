@page
@model SRAUMOAR.Pages.materiasGrupo.ListadoEstudiantesModel

@{
    ViewData["Title"] = "Listado de estudiantes";
}
<style>
    body {
    background-color: #f4f6f9;
    }

    .card-header {
    background-color: green;
    color: white;
    }

    .table-responsive {
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .table thead {
    background-color: #4a4e69;
    color: white;
    }

    .table-striped tbody tr:nth-of-type(even) {
    background-color: rgba(74, 78, 105, 0.05);
    }

    .table-hover tbody tr:hover {
    background-color: rgba(74, 78, 105, 0.1);
    }
</style>
<div class="container-fluid px-4 py-5">
    <div class="card mb-4">
        <div class="card-header">
            <h1 class="h3 mb-0">Listado de Estudiantes de @Model.NombreMateria</h1>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-2">
                    <h5 class="text-muted">
                        <span class="fw-bold">Grupo:</span>  @Model.Grupo.Nombre 
                    </h5>
                </div>
                <div class="col-md-3">
                    <h5 class="text-muted">
                        <span class="fw-bold">Materia:</span> @Model.NombreMateria
                    </h5>
                </div>
                <div class="col-md-4">
                    <h5 class="text-muted">
                        <span class="fw-bold">Carrera:</span>  @Model.Grupo.Carrera.NombreCarrera 
                    </h5>
                </div>
                <div class="col-md-3">
                    <h5 class="text-muted">
                        <span class="fw-bold">Docente supervisor:</span>  @Model.Grupo.Docente.Nombres @Model.Grupo.Docente.Apellidos 
                    </h5>
                </div>
            </div>

            <!-- Botón de Exportar Excel -->
            <div class="row mb-3">
                <div class="col-12 text-end">
                    <a asp-page="./ListadoEstudiantes" asp-page-handler="ExportarExcel" asp-route-id="@Model.idgrupo" 
                       class="btn btn-success">
                        <i class="bi bi-file-earmark-excel me-1"></i>
                        Exportar Excel
                    </a>
                </div>
            </div>

            <div class="table-responsive">

                @if (Model.MateriasInscritas.Count > 0 && Model.lista==false)
                {
                    
                    
                    <!--  **** -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary bg-gradient text-white">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-calendar-check me-2"></i>
                                Ingreso de notas
                            </h5>
                        </div>

                        <div class="card-body">
                            <form asp-page="./IngresoDeNotas" method="get">
                                <input type="hidden" name="idgrupo" value="@Model.idgrupo" />
                                <input type="hidden" name="materia" value="@Model.NombreMateria" />
                                <div class="row align-items-end">
                                    <div class="col-md-8">
                                        <label class="form-label">Actividad Académica</label>
                                        <select name="actividadId" class="form-select" required>
                                            <option value="">-- Seleccione una actividad --</option>
                                            @foreach (var item in (SelectList)ViewData["ActividadAcademicaId"])
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-arrow-right-circle me-2"></i>
                                            Continuar
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- **** -->
                }

                <table class="table table-striped table-hover align-middle ">
                    <thead class="table-dark">
                        <tr>
                            <th>Estudiante</th>
                            <th class="text-center">Nota Promedio</th>
                            @{
                                int nactividades = 0;
                            }
                            @foreach (var item in Model.ActividadAcademicas)
                            {

                                nactividades++;
                                
                                <th class="text-center">@item.Nombre</th>
                            }
                            <th class="text-center">Recuperación</th>
                            <th class="text-center">Nota Final</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--Aviso si no hay alumnos inscritos-->
                        @if (Model.MateriasInscritas.Count == 0)
                        {
                            <tr>
                                <td colspan="8" class="text-center">
                                    <h5 class="text-muted>">No hay alumnos inscritos en esta materia</h5>
                                </td>
                            </tr>

                        }

                        @foreach (var item in Model.MateriasInscritas)
                        {
                            // Si hay nota de recuperación, esa es la nota final
                            var notaFinal = item.NotaRecuperacion.HasValue 
                                ? item.NotaRecuperacion.Value 
                                : item.NotaPromedio;
                            var aprobado = notaFinal >= 7;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="ms-3">
                                            <p class="fw-bold mb-1">@item.Alumno.Nombres @item.Alumno.Apellidos</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@item.NotaPromedio</span>
                                </td>

                                @foreach (var actividad in Model.ActividadAcademicas)
                                {
                                    var nota = item.Notas.FirstOrDefault(n => n.ActividadAcademica.Nombre == actividad.Nombre);
                                    <td class="text-center">@((nota != null) ? nota.Nota : 0)</td>
                                }
                                
                                <td class="text-center">
                                    @if (item.NotaRecuperacion.HasValue)
                                    {
                                        <span class="badge bg-warning text-dark">@item.NotaRecuperacion.Value.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge @(aprobado ? "bg-success" : "bg-danger")">@notaFinal.ToString("N2")</span>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-outline-warning" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#modalRecuperacion"
                                            data-id="@item.MateriasInscritasId"
                                            data-nombre="@item.Alumno.Nombres @item.Alumno.Apellidos"
                                            data-nota="@(item.NotaRecuperacion?.ToString("N2") ?? "")">
                                        <i class="bi bi-pencil-square"></i> Recuperación
                                    </button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal para ingresar nota de recuperación -->
<div class="modal fade" id="modalRecuperacion" tabindex="-1" aria-labelledby="modalRecuperacionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="modalRecuperacionLabel">
                    <i class="bi bi-pencil-square me-2"></i>Nota de Recuperación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formRecuperacion" method="post" asp-page-handler="GuardarRecuperacion">
                <div class="modal-body">
                    <input type="hidden" id="materiaInscritaId" name="materiaInscritaId" />
                    <input type="hidden" name="idgrupo" value="@Model.idgrupo" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Estudiante:</label>
                        <p id="nombreEstudiante" class="form-control-plaintext"></p>
                    </div>
                    
                    <div class="mb-3">
                        <label for="notaRecuperacion" class="form-label fw-bold">Nota de Recuperación:</label>
                        <input type="number" 
                               class="form-control" 
                               id="notaRecuperacion" 
                               name="notaRecuperacion" 
                               min="0" 
                               max="10" 
                               step="0.01" 
                               required
                               placeholder="Ingrese la nota (0-10)">
                        <div class="form-text">La nota debe estar entre 0 y 10</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save me-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var modalRecuperacion = document.getElementById('modalRecuperacion');
            modalRecuperacion.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var id = button.getAttribute('data-id');
                var nombre = button.getAttribute('data-nombre');
                var nota = button.getAttribute('data-nota');
                
                document.getElementById('materiaInscritaId').value = id;
                document.getElementById('nombreEstudiante').textContent = nombre;
                document.getElementById('notaRecuperacion').value = nota;
            });
        });
    </script>
}