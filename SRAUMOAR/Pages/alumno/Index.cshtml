@page
@model SRAUMOAR.Pages.alumno.IndexModel

@{
    ViewData["Title"] = "Alumnos";
    Layout = "_Layout";
}

<style>
    .content-header {
        padding: 2rem 0;
        background: #f8f9fa;
        margin-bottom: 2rem;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        background: #ffffff;
    }

    .btn-primary {
        background: #2c3e50;
        border: none;
        padding: 0.8rem 2rem;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: #34495e;
        transform: translateY(-2px);
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #2c3e50;
        color: white;
        border: none;
        padding: 1.2rem 1rem;
        font-weight: 500;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table tbody td {
        vertical-align: middle;
        padding: 1.2rem 1rem;
        border-bottom: 1px solid #f1f1f1;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .student-photo {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }

    .student-photo:hover {
        transform: scale(1.1);
        border-color: #2c3e50;
    }

    .gender-icon {
        font-size: 1.1rem;
        color: #2c3e50;
    }

    .search-box {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 0.8rem 1.2rem;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

    .search-box:focus {
        border-color: #2c3e50;
        box-shadow: none;
    }

    .btn-search {
        background: #2c3e50;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s ease;
    }

    .btn-search:hover {
        background: #34495e;
    }

    .dropdown-menu {
        border: none;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        border-radius: 8px;
        padding: 0.5rem;
    }

    .dropdown-item {
        padding: 0.8rem 1.2rem;
        border-radius: 6px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
        color: #2c3e50;
    }

    .dropdown-item i {
        margin-right: 0.8rem;
        color: #2c3e50;
    }

    .btn-link {
        color: #2c3e50;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

    .btn-link:hover {
        color: #34495e;
    }

    .btn-group .btn-primary {
        padding: 0.6rem 1rem;
        background: transparent;
        color: #2c3e50;
    }

    .btn-group .btn-primary:hover {
        background: #f8f9fa;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 600;
        font-size: 1.8rem;
    }

    .breadcrumb-item a {
        color: #6c757d;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #2c3e50;
    }

    .pagination {
        margin-bottom: 0;
    }

    .pagination .page-link {
        color: #2c3e50;
        border: none;
        padding: 0.5rem 1rem;
        margin: 0 0.2rem;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .pagination .page-link:hover {
        background-color: #f8f9fa;
        color: #2c3e50;
    }

    .pagination .page-item.active .page-link {
        background-color: #2c3e50;
        color: white;
    }

    .pagination .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        background-color: #f8f9fa;
    }

    @@media (max-width: 768px) {
        .table-responsive {
            border-radius: 12px;
            overflow: hidden;
        }
        
        .btn-group {
            width: 100%;
        }
        
        .btn-group .btn-primary {
            width: 100%;
            text-align: left;
        }

        .content-header {
            padding: 1rem 0;
        }

        .page-title {
            font-size: 1.5rem;
        }
    }
</style>

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h1 class="page-title">
                        <i class="bi bi-people me-2"></i>
                        Listado de Alumnos
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
                        <li class="breadcrumb-item active">Alumnos</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col-12">
                    <a asp-page="./Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nuevo Alumno
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <form method="get" action="alumno/Busqueda" class="mb-4">
                        <div class="input-group">
                            <input type="text" class="form-control search-box" placeholder="Buscar por nombre o apellido..." name="buscar" value="@Model.busqueda" />
                            <button class="btn btn-search" type="submit">
                                <i class="bi bi-search me-2"></i>Buscar
                            </button>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 50px"></th>
                                    <th style="width: 50px"></th>
                                    <th>@Html.DisplayNameFor(model => model.Alumno[0].Nombres)</th>
                                    <th>@Html.DisplayNameFor(model => model.Alumno[0].Apellidos)</th>
                                    <th>@Html.DisplayNameFor(model => model.Alumno[0].Genero)</th>
                                    <th>@Html.DisplayNameFor(model => model.Alumno[0].FechaDeNacimiento)</th>
                                    <th>@Html.DisplayNameFor(model => model.Alumno[0].Email)</th>
                                    <th>Usuario</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Alumno)
                                {
                                    <tr>
                                        <td>
                                            <i class="bi @(item.Genero == 0 ? "bi-gender-male" : "bi-gender-female") gender-icon"></i>
                                        </td>
                                        <td>
                                            @if (item.Foto != null)
                                            {
                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Foto)" 
                                                     alt="Foto del Alumno" 
                                                     class="student-photo" />
                                            }
                                            else
                                            {
                                                <img src="~/img/default-avatar.png" 
                                                     alt="Foto por defecto" 
                                                     class="student-photo" />
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                                        <td>@(item.Genero == 0 ? "Masculino" : "Femenino")</td>
                                        <td>@item.FechaDeNacimiento.ToString("dd/MM/yyyy")</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>
                                            @if (item.Usuario?.ToString().Length > 0)
                                            {
                                                <a href='autenticacion/administrarusuario/@item.AlumnoId/1' class="btn btn-link">
                                                    <i class="bi bi-person-gear me-1"></i>Administrar
                                                </a>
                                            }
                                            else
                                            {
                                                <a href='autenticacion/crearusuarioalumno/@item.AlumnoId/@item.Usuario?.IdUsuario' class="btn btn-link">
                                                    <i class="bi bi-person-plus me-1"></i>Crear
                                                </a>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.AlumnoId">
                                                            <i class="bi bi-pencil-square"></i> Editar
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.AlumnoId">
                                                            <i class="bi bi-info-circle"></i> Detalles
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @if (Model.Alumno.Any())
                        {
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <div>
                                    <span class="text-muted">
                                        Mostrando @(((Model.PageNumber - 1) * Model.PageSize) + 1) a 
                                        @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalPages * Model.PageSize)) 
                                        de @(Model.TotalPages * Model.PageSize) resultados
                                    </span>
                                </div>
                                <nav aria-label="Navegación de páginas">
                                    <ul class="pagination mb-0">
                                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                            <a class="page-link" asp-page="./Index" asp-route-PageNumber="@(Model.PageNumber - 1)" aria-label="Anterior">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        @for (int i = 1; i <= Model.TotalPages; i++)
                                        {
                                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                                <a class="page-link" asp-page="./Index" asp-route-PageNumber="@i">@i</a>
                                            </li>
                                        }
                                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                            <a class="page-link" asp-page="./Index" asp-route-PageNumber="@(Model.PageNumber + 1)" aria-label="Siguiente">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mt-4">
                                No hay estudiantes inscritos
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
