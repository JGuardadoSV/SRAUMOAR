@page
@model SRAUMOAR.Pages.portal.docente.MiPerfilModel

@{
    ViewData["Title"] = "Mi Perfil - Docente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Mi Perfil</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form method="post" id="perfilDocenteForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Docente.DocenteId" />

                        <!-- Solo lectura -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Nombres</label>
                                <input value="@Model.Docente.Nombres" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Apellidos</label>
                                <input value="@Model.Docente.Apellidos" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">DUI</label>
                                <input value="@Model.Docente.Dui" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Fecha de Nacimiento</label>
                                <input value='@Model.Docente.FechaDeNacimiento.ToString("dd/MM/yyyy")' class="form-control" readonly />
                            </div>
                        </div>

                        <!-- Editables -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Teléfono</label>
                                <input asp-for="Docente.Telefono" class="form-control" />
                                <span asp-validation-for="Docente.Telefono" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input asp-for="Docente.Email" class="form-control" />
                                <span asp-validation-for="Docente.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Dirección</label>
                            <input asp-for="Docente.Direccion" class="form-control" />
                            <span asp-validation-for="Docente.Direccion" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                            <a asp-page="./Index" class="btn btn-secondary">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('perfilDocenteForm');
            form.addEventListener('submit', function () {
                const btn = form.querySelector('button[type="submit"]');
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Guardando...';
            });
        });
    </script>
}


