@page
@model SRAUMOAR.Pages.portal.docente.IndexModel
@{
}
<div class="container py-5">
    <h2 class="text-center mb-4">Panel del Docente</h2>

    <div class="row g-4 justify-content-center">
        <!-- Tarjeta de Grupos Asignados -->
        <div class="col-md-6 col-lg-4">
            <a asp-page="/grupos/Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="display-4 text-primary mb-3">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h4 class="card-title mb-3">Grupos Asignados</h4>
                        <p class="card-text text-muted">
                            Gestione y visualice todos sus grupos asignados para el período actual
                        </p>
                    </div>
                    <div class="card-footer bg-light text-center py-3">
                        <span class="text-primary">Ver grupos <i class="bi bi-arrow-right"></i></span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Tarjeta de Materias Asignadas -->
        <div class="col-md-6 col-lg-4">
            <a asp-page="/materiasgrupo/Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="display-4 text-success mb-3">
                            <i class="bi bi-book"></i>
                        </div>
                        <h4 class="card-title mb-3">Materias Asignadas</h4>
                        <p class="card-text text-muted">
                            Acceda a todas las materias que imparte en el período actual
                        </p>
                    </div>
                    <div class="card-footer bg-light text-center py-3">
                        <span class="text-success">Ver materias <i class="bi bi-arrow-right"></i></span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out;
    }

        .hover-card:hover {
            transform: translateY(-5px);
        }
</style>