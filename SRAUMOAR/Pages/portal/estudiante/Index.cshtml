        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
        overflow: hidden;
    }

    .foto-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .student-info p {
        color: #666;
        font-size: 0.95rem;
    }

    .badge {
        font-weight: 500;
    }
</style>

