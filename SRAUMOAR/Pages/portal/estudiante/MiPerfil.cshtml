@page
@model SRAUMOAR.Pages.portal.estudiante.MiPerfilModel

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Mi Perfil</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form method="post" id="perfilForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Alumno.AlumnoId" />

                        <!-- Campos de solo lectura -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Nombres</label>
                                <input value="@Model.Alumno.Nombres" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Apellidos</label>
                                <input value="@Model.Alumno.Apellidos" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input value="@Model.Alumno.Email" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Carnet</label>
                                <input value="@Model.Alumno.Carnet" class="form-control" readonly />
                            </div>
                        </div>

                        <!-- Campos editables -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">DUI</label>
                                <input asp-for="Alumno.DUI" class="form-control" />
                                <span asp-validation-for="Alumno.DUI" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Teléfono Primario</label>
                                <input asp-for="Alumno.TelefonoPrimario" class="form-control" />
                                <span asp-validation-for="Alumno.TelefonoPrimario" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">WhatsApp</label>
                                <input asp-for="Alumno.Whatsapp" class="form-control" />
                                <span asp-validation-for="Alumno.Whatsapp" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Teléfono Secundario</label>
                                <input asp-for="Alumno.TelefonoSecundario" class="form-control" />
                                <span asp-validation-for="Alumno.TelefonoSecundario" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                            <a asp-page="./Index" class="btn btn-secondary">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('#perfilForm').on('submit', function () {
                // Mostrar un indicador de carga
                $(this).find('button[type="submit"]').prop('disabled', true).html(
                    '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Guardando...'
                );
            });
        });
    </script>
}
