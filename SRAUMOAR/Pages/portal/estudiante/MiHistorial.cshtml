@page
@model SRAUMOAR.Pages.portal.estudiante.MiHistorialModel
@{
    ViewData["Title"] = "Mi Historial Académico";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-journal-text me-2 text-primary"></i>
                        Mi Historial Académico
                    </h2>
                    <p class="text-muted mb-0">Consulta tu progreso académico y calificaciones</p>
                </div>
                <a href="/portal/estudiante" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Volver al Portal
                </a>
            </div>
        </div>
    </div>

    <!-- Información del Alumno -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-header bg-gradient-primary text-white">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0">
                        <i class="bi bi-person me-2"></i>
                        @Model.NombreAlumno
                    </h5>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="row">
                        <div class="col-6">
                            <h6 class="mb-1 text-white-50">Total Materias</h6>
                            <span class="badge bg-light text-dark fs-6 shadow-sm">@Model.TotalMaterias</span>
                        </div>
                        <div class="col-6">
                            <h6 class="mb-1 text-white-50">Total UV</h6>
                            <span class="badge bg-light text-dark fs-6 shadow-sm">@Model.TotalUV</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.CarrerasDisponibles.Any())
    {
        <!-- Filtro por Carrera -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header bg-gradient-light">
                <h6 class="mb-0">
                    <i class="bi bi-funnel me-2"></i>
                    Seleccionar Carrera
                </h6>
            </div>
            <div class="card-body">
                <div class="row align-items-end">
                    <div class="col-md-8">
                        <label for="carreraFiltro" class="form-label fw-semibold">Carrera:</label>
                        <select id="carreraFiltro" class="form-select border-2">
                            @foreach (var carrera in Model.CarrerasDisponibles)
                            {
                                if (carrera.CarreraId == Model.CarreraSeleccionadaId)
                                {
                                    <option value="@carrera.CarreraId" selected>
                                        @carrera.NombreCarrera
                                    </option>
                                }
                                else
                                {
                                    <option value="@carrera.CarreraId">
                                        @carrera.NombreCarrera
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="button" id="btnFiltrar" class="btn btn-primary shadow-sm">
                            <i class="bi bi-search me-2"></i>
                            Cambiar Carrera
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.HistorialCiclos != null && Model.HistorialCiclos.Any())
    {
        <!-- Resumen General -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="p-3">
                            <h3 class="text-primary mb-1">@Model.HistorialCiclos.Count</h3>
                            <p class="text-muted mb-0">Ciclos Cursados</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <h3 class="text-success mb-1">@Model.HistorialCiclos.Sum(c => c.MateriasHistorial?.Count(m => m.Aprobada) ?? 0)</h3>
                            <p class="text-muted mb-0">Materias Aprobadas</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <h3 class="text-info mb-1">@Model.HistorialCiclos.Sum(c => c.MateriasHistorial?.Sum(m => m.Materia != null ? m.Materia.uv : (m.MateriaUnidadesValorativasLibre ?? 0)) ?? 0)</h3>
                            <p class="text-muted mb-0">Unidades Valorativas</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Historial por Ciclos -->
        @foreach (var ciclo in Model.HistorialCiclos)
        {
            var materiasAprobadas = ciclo.MateriasHistorial?.Count(m => m.Aprobada) ?? 0;
            var materiasReprobadas = ciclo.MateriasHistorial?.Count(m => !m.Aprobada) ?? 0;
            var totalMateriasCiclo = ciclo.MateriasHistorial?.Count ?? 0;
            var promedioCiclo = ciclo.MateriasHistorial?.Any() == true 
                ? ciclo.MateriasHistorial.Average(m => m.Promedio) 
                : 0;
            var uvCiclo = ciclo.MateriasHistorial?.Sum(m => m.Materia != null ? m.Materia.uv : (m.MateriaUnidadesValorativasLibre ?? 0)) ?? 0;

            <div class="card mb-4 border-0 shadow-sm ciclo-card">
                <div class="card-header bg-gradient-info text-white">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar3 me-2"></i>
                                Ciclo @ciclo.CicloTexto
                                @if (ciclo.Pensum != null)
                                {
                                    <small class="ms-2 opacity-75">| Pensúm @ciclo.Pensum.Anio</small>
                                }
                                else if (!string.IsNullOrEmpty(ciclo.PensumNombreLibre))
                                {
                                    <small class="ms-2 opacity-75">| @ciclo.PensumNombreLibre</small>
                                }
                            </h5>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="d-flex justify-content-md-end gap-3">
                                <div class="text-center">
                                    <div class="fw-bold">@totalMateriasCiclo</div>
                                    <small class="opacity-75">Materias</small>
                                </div>
                                <div class="text-center">
                                    <div class="fw-bold">@promedioCiclo.ToString("0.00")</div>
                                    <small class="opacity-75">Promedio</small>
                                </div>
                                <div class="text-center">
                                    <div class="fw-bold">@uvCiclo</div>
                                    <small class="opacity-75">UV</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (ciclo.MateriasHistorial != null && ciclo.MateriasHistorial.Any())
                    {
                        <!-- Estadísticas del Ciclo -->
                        <div class="p-3 bg-light border-bottom">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <span class="badge bg-success px-3 py-2">
                                        <i class="bi bi-check-circle me-1"></i>
                                        @materiasAprobadas Aprobadas
                                    </span>
                                </div>
                                <div class="col-md-3">
                                    <span class="badge bg-danger px-3 py-2">
                                        <i class="bi bi-x-circle me-1"></i>
                                        @materiasReprobadas Reprobadas
                                    </span>
                                </div>
                                <div class="col-md-3">
                                    <span class="badge bg-primary px-3 py-2">
                                        <i class="bi bi-graph-up me-1"></i>
                                        Promedio: @promedioCiclo.ToString("0.00")
                                    </span>
                                </div>
                                <div class="col-md-3">
                                    <span class="badge bg-info px-3 py-2">
                                        <i class="bi bi-book me-1"></i>
                                        @uvCiclo UV
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0 ps-4" style="width: 5%">#</th>
                                        <th class="border-0">Materia</th>
                                        <th class="text-center border-0" style="width: 15%">UV</th>
                                        <th class="text-center border-0" style="width: 15%">Promedio</th>
                                        <th class="text-center border-0" style="width: 15%">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int contador = 1;
                                    }
                                    @foreach (var materia in ciclo.MateriasHistorial.OrderBy(m => m.Materia != null ? m.Materia.NombreMateria : m.MateriaNombreLibre ?? ""))
                                    {
                                        var uvMateria = materia.Materia != null ? materia.Materia.uv : (materia.MateriaUnidadesValorativasLibre ?? 0);
                                        <tr class="border-0">
                                            <td class="ps-4 text-muted">@contador</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <strong class="d-block text-dark">
                                                            @if (materia.Materia != null)
                                                            {
                                                                @materia.Materia.NombreMateria
                                                            }
                                                            else
                                                            {
                                                                @(materia.MateriaNombreLibre ?? "Sin nombre")
                                                            }
                                                        </strong>
                                                        <small class="text-muted">
                                                            @if (materia.Materia != null)
                                                            {
                                                                @materia.Materia.CodigoMateria
                                                            }
                                                            else
                                                            {
                                                                @(materia.MateriaCodigoLibre ?? "N/A")
                                                            }
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary px-3 py-2">
                                                    @uvMateria
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-@(materia.Promedio >= 6 ? "success" : "danger") fs-6 px-3 py-2 shadow-sm">
                                                    @materia.Promedio.ToString("0.00")
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @if (materia.Aprobada)
                                                {
                                                    <span class="badge bg-success px-3 py-2 shadow-sm">
                                                        <i class="bi bi-check-circle me-1"></i>
                                                        Aprobada
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger px-3 py-2 shadow-sm">
                                                        <i class="bi bi-x-circle me-1"></i>
                                                        Reprobada
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                        contador++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center m-3">
                            <i class="bi bi-info-circle me-2"></i>
                            No hay materias registradas para este ciclo.
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <!-- No hay historial -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-journal-x text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No hay historial académico disponible</h4>
                <p class="text-muted">Tu historial académico aparecerá aquí una vez que se registren tus calificaciones.</p>
            </div>
        </div>
    }
</div>

<script>
    document.getElementById('btnFiltrar').addEventListener('click', function() {
        const carreraId = document.getElementById('carreraFiltro').value;
        const currentUrl = new URL(window.location);
        currentUrl.searchParams.set('carreraId', carreraId);
        window.location.href = currentUrl.toString();
    });
</script>

<style>
    .card {
        border-radius: 15px;
        transition: all 0.3s ease-in-out;
        border: none;
    }
    
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
        background: #f8f9fa;
        padding: 1rem 0.75rem;
    }
    
    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.9rem;
        font-weight: 500;
        letter-spacing: 0.5px;
    }
    
    .btn {
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-1px);
    }
    
    .form-select {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }
    
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
        transform: translateY(-1px);
    }
    
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
    }
    
    .bg-gradient-info {
        background: linear-gradient(135deg, #0dcaf0 0%, #0aa2c0 100%);
    }
    
    .bg-gradient-light {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }
    
    .shadow-sm {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1) !important;
    }

    .ciclo-card {
        transition: all 0.3s ease;
    }

    .ciclo-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }

    .card-header h5 {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .table th {
        font-size: 0.9rem;
    }

    .table td {
        font-size: 0.95rem;
    }

    .badge {
        font-weight: 500;
    }
</style>
